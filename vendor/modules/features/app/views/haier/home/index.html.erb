        var now = id.text()-1;
        var movePos = now*imgHeight;
        if(!$("#imgbox").is(":animated")){
          $("#imgbox").animate({top:-movePos},300);
          id.addClass("he_act0").siblings().removeClass("he_act0");
        }
      }
      function autoSwitch(){
        play = setInterval(function(){
          id = $(".he_page li.he_act0").next();
          if(id.length == 0){
            id = $(".he_page li:first");
          }
          rotate(id);
        },3000)
      }
      autoSwitch();
      $(".he_page").find("li").mouseover(function(){
        clearInterval(play);
        var id = $(this);
        rotate(id);
        autoSwitch();
      });
