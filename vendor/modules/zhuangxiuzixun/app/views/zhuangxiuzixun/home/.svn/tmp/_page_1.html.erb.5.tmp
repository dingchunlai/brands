<div class="left">
	<div class="jiaodian">
		<script type="text/javascript">
			$(function() {
				$('#newsSlider').loopedSlider({
					autoStart : 5000
				});
				$('.validate_Slider').loopedSlider({
					autoStart : 5000
				});
				$("#enter_lab").click(function() {
					window.location = $(this).find("a").attr("href");
					return false;
				});
			});
		</script>
		<div id="newsSlider">
			<div class="container">
				<div class="bmdiv_alpha">
					<a href="javascript:void(0)" class="tanchuall_open"><img src="http://js2.51hejia.com/img/zhuangxiu1023/bmdiv_btn.gif" /></a>
				</div>
				<ul class="slides">
					<% hejia_promotion_items(54146, :attributes => ['title','url','image_url'],:limit => 5).each do |r| %>
					<li>
						<%= link_to image_tag(api_img_url_for(r.image_url)), r.url, :title => r.title, :target => "_blank" %>
					</li>
					<% end %>
				</ul>
			</div>
			<div class="validate_Slider"></div>
			<ul class="pagination">
				<li>
					<a href="#">1</a>
				</li>
				<li>
					<a href="#">2</a>
				</li>
				<li>
					<a href="#">3</a>
				</li>
				<li>
					<a href="#">4</a>
				</li>
				<li>
					<a href="#">5</a>
				</li>
			</ul>
		</div>
	</div>
	<script type="text/javascript">
		$(function() {
			$(".zx_hotduod_img div:first").show();
			$(".zx_hotduod_news li:first").addClass("zx_hotduod_active");
			$(".zx_hotduod_news li").mouseover(function() {
				$(this).removeClass("zx_hotduod_news_list").siblings().removeClass("zx_hotduod_active");
				$(this).addClass("zx_hotduod_active").siblings().addClass("zx_hotduod_news_list");
				$(".zx_hotduod_img .zx_hotduod_img_list").eq($(this).index()).siblings().hide().end().show();
			})
		})

	</script>
	<div class="box">
		<h3 class="noindent">装修热点聚焦</h3>

		<div class="zx_hotduod">
			<div class="zx_hotduod_img">
				<% @new_cases.each do |nc| %>
				<div class="zx_hotduod_img1 zx_hotduod_img_list" style="display: none;"><img src="http://d.51hejia.com/api<%= nc.image_url %>" />
				</div>
				<% end %>
			</div>
			<div class="zx_hotduod_news">
				<ul>
					<% @new_cases.each_with_index do |nc,i| %>
					<li class=<%= (i == 0) ? 'zx_hotduod_active' : 'zx_hotduod_news_list' %>>
						<a target="_blank" href="<%= nc.url %>" title="<%= h nc.title %>"><%= truncate_for_zh nc.title,24 %></a>
						<br />
						<!--a target="_blank" href="<%= nc.price_now %>">装修公司：<%= nc.price_ago %></a-->
					</li>
					<% end %>
				</ul>
			</div>
		</div>

	</div>
</div>
<div class="middle">
	<% articles = hejia_promotion_items(54147, :attributes => ['title','url','image_url','description'],:limit => 5) %>
	<% first = articles.shift %>
	<div class="box">
		<h3 class="noindent"> <%= link_to first.title, first.url, :target => "_blank", :class => "noindent"%> </h3>
		<p>
			<a href="<%= first.url %>" target="_blank"><%= truncate(first.description,:length => 60 ,:omission => "") %>...[查看详细]</a>
		</p>
	</div>
	<ul>
		<% tags = hejia_promotion_items(54220, :attributes => ['title','url','image_url','description'],:limit => 12) %>
		<% articles.each_with_index do |article, index| %>
		<li class=" clearfix" style="position:relative;">
			<a href="<%= article.url %>" target="_blank"><img class="img-1" src="<%= api_img_url_for(article.image_url) %>" /></a>
			<i class="bmdiv_i_red"><a style="color:#fff;" href="javascript:void(0)" class="tanchuall_open">我想<i class="bmdiv_i_fontff0">免费设计</i></a></i>
			<div class="inbox">
				<h3 class="noindent"><a class="noindent" href="<%= article.url %>" target="_blank"><%= article.title %></a></h3>
				<p>
					<a href="<%= article.url %>" target="_blank"><%= truncate(article.description,:length => 40 ,:omission => "") %>...[查看详细]</a>
				</p>
				<p class="tags"><img src="http://img.51hejia.com/images/zhuangxiu1023/tag.gif" />
					<% for tag in tags[index * 3...index * 3 + 3] %>
					<a href="<%= tag.url %>" target="_blank"><%= tag.title %></a>
					<% end %>
				</p>
			</div>
		</li>
		<% end %>
	</ul>
</div>
