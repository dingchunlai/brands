	<div class="WQ_turn">
		<style>
			#scrolls {
				float: left;
				width: 200px;
				height: 105px;
				overflow: hidden;
				font-size: 12px;
				border: 1px solid #ddd;
				padding: 2px;
				margin-left: 25px;
				display: inline;
			}
			#scrolls .indemo {
				float: left;
				width: 100%;
			}
			#scrolls p {
				font-size: 12px;
			}
			#demo1, #demo2 {
				float: left;
			}
			.demo tr {
				line-height: 20px;
				overflow: hidden;
				display: block;
			}
			.demo .WQ_td1 {
				overflow: hidden;
				width: 30px;
			}
			.demo .WQ_td2 {
				overflow: hidden;
				width: 90px;
				text-align: center;
			}
			.demo .WQ_td3 {
				overflow: hidden;
				width: 60px;
			}
		</style>
		<div id="scrolls" style="height:142px;">
			<div class="demo">
				<% baomings = ActiveRecord::Base.connection.select_all("SELECT name,mobile,addtime FROM 51hejia_zhaobiao.zhaobiao_baomings where status in (4,9,12,15) order by id desc limit 60") %>
				<% unless baomings.blank? %>
				<div id="demo1">
					<table width="200">
						<tbody>
							<% for baoming in baomings[0,30] %>
							<tr>
								<td class="WQ_td1"> <% if baoming["name"].split("").size > 1 %>
								<%= baoming["name"].split("")[0] %>**
								<% else %>
								<%= baoming["name"] %>
								<% end %> </td>
								<td class="WQ_td2"><%= baoming["mobile"].first(3) + "*****" + baoming["mobile"].last(3) %></td>
								<td class="WQ_td4"><%= baoming["addtime"].to_date.strftime("%Y-%m-%d") %></td>
							</tr>
							<% end %>
						</tbody>
					</table>
				</div>
				<div id="demo2">
					<table width="200">
						<tbody>
							<% if baomings.size > 30 %>
							<% for baoming in baomings[31,60] %>
							<tr>
								<td class="WQ_td1"> <% if baoming["name"].split("").size > 1 %>
								<%= baoming["name"].split("")[0] %>**
								<% else %>
								<%= baoming["name"] %>
								<% end %> </td>
								<td class="WQ_td2"><%= baoming["mobile"].first(3) + "*****" + baoming["mobile"].last(3) %></td>
								<td class="WQ_td4"><%= baoming["addtime"].to_date.strftime("%Y-%m-%d") %></td>
							</tr>
							<% end %>
							<% end %>
						</tbody>
					</table>
				</div>
				<% end %>
			</div>
		</div>
		<script>
			function ScrollsTop(mainid, speeds) {
				var speed = speeds;
				var tabTop = document.getElementById(mainid);
				var tab1 = document.getElementById("demo1");
				var tab2 = document.getElementById("demo2");
				tab2.innerHTML = tab1.innerHTML;
				function Marqueet() {
					if (tabTop.scrollTop >= tab2.offsetHeight)
						tabTop.scrollTop -= tab1.offsetHeight;
					else {
						tabTop.scrollTop++;
					}
				}

				var MyMar = setInterval(Marqueet, speed);
				tabTop.onmouseover = function() {
					clearInterval(MyMar)
				};
				tabTop.onmouseout = function() {
					MyMar = setInterval(Marqueet, speed)
				};
			}

			ScrollsTop('scrolls', 30);
		</script>
	</div>
	<!--end-文字滚动2012年8月27日-->
</div>
