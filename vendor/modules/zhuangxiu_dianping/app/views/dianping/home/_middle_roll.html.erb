<% cache "dianping:middle:roll:#{@user_city_code}:index", :expires_in => 5.minutes  do %>
<div class="zxdp2011-fbdh">
<h3>
  <p><%= CITIES[@user_city_code.to_i] %>装修公司动态</p>
</h3>
<div class="zxdp2011-fbdh_latestnum"> 已有<span><%= DecorationDiary.published.count(:select => "distinct user_id") %></span>位网友点评 	&nbsp;发表<span><%= DecorationDiary.published.count %></span>个装修日记 </div>
</div>
<div class="zxdp2011_wyyx">
<div style="overflow: hidden;" id="ScrollMe">
  <ul>
    <% @from_all.sort_by { |fa| Time.zone.parse("#{fa.updated_at}") }.reverse.each do |f| %>
       <%
       deco_f_id = case f
          when DecorationDiary;f.deco_firm_id
          when HejiaCase;f.COMPANYID
          when Remark;f.resource_id
          end
      %>
      <li><span><%= distance_of_time_in_words(f.updated_at,f.updated_at.utc? ? (Time.now + 3600 * 8).utc : Time.now) %>前</span>
      <label><%= link_to((f.is_a?(Remark) ? (f.resource ? truncate_u(f.resource.name_abbr,6) : "#{CITIES[@user_city_code.to_i]}装修公司") : (f.name_abbr ? truncate_u(f.name_abbr,6) : "#{CITIES[@user_city_code.to_i]}装修公司")),firm_path(deco_f_id),:target =>'_blank') %></label>
      收到 网友<%=
          case f
          when DecorationDiary;'日记'
          when HejiaCase;'案例'
          when Remark;'评价'
          end
      %>
      <%
      roll_link = case f
                  when DecorationDiary;"http://z.#{TAGURLS[@user_city_code.to_i]}.51hejia.com/stories/#{f.id}"
                  when HejiaCase;"http://z.#{TAGURLS[@user_city_code.to_i]}.51hejia.com/cases/#{f.ID}"
                  when Remark;firm_path(f.resource_id)
                  end
      %>
      <label class="zxdp2011_wyyx_link"><a href="<%= roll_link %>" target="_blank"><%=
          case f
          when DecorationDiary;remove_comment_tag(strip_tags(f.title))
          when HejiaCase;remove_comment_tag(strip_tags(f.NAME))
          when Remark;remove_comment_tag(strip_tags(f.content.strip)) unless f.content.nil?
          end
      %></a>
      </label>
    </li>
    <% end %>
  </ul>
</div>
<script type="text/javascript">new srcMarquee("ScrollMe", 0, 1, 460, 96, 30, 5000, 0, 96)</script>
</div>
<% end %>