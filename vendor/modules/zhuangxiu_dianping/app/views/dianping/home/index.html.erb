<% city_name = CITIES[@user_city_code.to_i]%>
<% location "首页"%>

<% html_metadata = HtmlMetadata.find_by_page_id("#{city_name}:装修点评:首页") %>
<% @title = html_metadata.title %>
<% @description = html_metadata.description %>
<% @keywords = html_metadata.keywords %>
<% stylesheet jquery_resource(:plugin => 'fancybox', :version => '1.3.1', :resource => :css) %>
<% javascript jquery_resource(:plugin => 'fancybox', :version => '1.3.1', :resource => "jquery.fancybox.js") %>
<% javascript jquery_resource(:plugin => 'validate', :version => '1.5.5', :resource => "jquery.validate.min.js") %>
<% javascript jquery_resource(:plugin => 'validate', :version => '1.5.5', :resource => "messages_cn.js") %>
<script type="text/javascript" src="http://js1.51hejia.com/js/textscroll.js"></script>
<% dp_js 'dianping/home/gongdi.js'%>
<script src="http://js2.51hejia.com/js/loopedslider.min.js" type="text/javascript"></script>
<script type="text/javascript">
  $(function(){
    $('#newsSlider').loopedSlider({
      autoStart: 5000
    });
    $('.validate_Slider').loopedSlider({
      autoStart: 5000
    });
    $("#enter_lab").click(function(){
      window.location=$(this).find("a").attr("href");
      return false;
    });

    $('.news_slider').loopedSlider({
      autoStart: 5000
    });
    $('.validate_Slider').loopedSlider({
      autoStart: 5000
    });
  });
</script>
