<div class="sh_l_list f_l margin10">
    <ul>
      <% @zxbj_api.each do |bj| %>
        <li><a target="_blank" href="<%= bj.url %>" title="<%= bj.title %>"><%= truncate_u(bj.title,20) %></a></li>
      <% end %>
    </ul>
</div>
<div class="zxdp2011_l_talk f_r">
    <h3>
        <label>网友印象</label>
    </h3>
    <div class="sh_r_feel">
        <table cellspacing="0" cellpadding="0" border="0" width="475">
          <!--DWLayoutTable-->
          <tbody>
          <%
            i = 0
            @firms_impressions.each do |firm_id|
              firm = DecoFirm.find_by_id firm_id
              unless firm.blank?
                break if i == 4
                i += 1
          %>
          <tr>
            <td height="24" align="left" width="90" valign="middle"><a target="_blank" href="<%= firm_url(:id => firm.id,:trailing_slash => "/") %>"><%= truncate(strip_tags(firm.name_abbr),:length => 6, :omission => '')%></a></td>
            <td align="left" width="55" valign="middle"><%= firm.price_text %></td>
            <% DecoImpression.charts(firm.id, 3).each_with_index do |r,index|%>
            <td align="left" width="110" valign="middle"><span class="zxdp2010_wyyxcolor0<%= index+1 %>"><%= h truncate(r[:name], 5, '') %></span>(<%= r[:percent] %>)</td>
            <% end %>
          </tr>
          <%
            end
           end
          %>
         </tbody>
        </table>
    </div>
</div>