<% html_metadata = HtmlMetadata.find_by_page_id("#{CITIES[@user_city_code.to_i]}:装修点评:日记终端页") %>
<% @title = html_metadata.title % { :decoration_diary_name => @diary.title} %>
<% @description = html_metadata.description %>
<% @keywords = html_metadata.keywords % {:decoration_diary_name => @diary.title} %>
<% firm_sub_menu %>
<% location "#{link_to @firm.name_abbr,firm_url(:id => @firm.id,:trailing_slash => "/")} > #{link_to '装修日志',firm_decoration_diaries_url(:firm_id => @firm.id)} > #{@diary.title}" %>
<% content_for (:head) do %>
  <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.3/jquery.min.js"></script>
  <%= javascript_include_tag 'jrails'%>
  <script type="text/javascript" src="http://js.51hejia.com/js/2010/tab.js"></script>
  <% css_url "zx_diary.css" %>
  <% javascript 'http://js.51hejia.com/js/jquery.colorbox-min.js'%>
  <% dp_js 'dianping/decoration_diaries/decoration_diaries.js' %>
  <% stylesheet "http://js.51hejia.com/css/api/colorbox.css?1291024352" %>
<% end %>
<!--content_code-->
<div class="width960 clearfix margin10">
  <div class="zxdp2010_r f_r">
    <%= render :partial => '/dianping/shared/side' %>
  </div>
  <div class="zxdp2010_l f_l">
    <div class="diary_continfotit clearfix">
      <h3><%= @diary.title %></h3>
      <div class="diary_continfo f_l">
        <table width="100%" border="0" cellspacing="0" cellpadding="0">
          <tr>
            <td width="65"><strong>装修业主：</strong></td>
            <td width="84"><%= truncate(@diary.user_name, :length => 7 ,:omission => '') %></td>
            <td width="65"><strong>小区名称：</strong></td>
            <td width="225"><%= @diary.building_name ? @diary.building_name : "暂无信息" %></td>
          </tr>
          <tr>
            <td><strong>施工单位：</strong></td>
            <td><a href="<%= firm_url(:id => @firm.id,:trailing_slash => true)%>" title="<%= @firm.name_abbr %>" target="_blank"><%= @firm.name_abbr %></a></td>
            <td><strong>合同价格：</strong></td>
            <td><%= @diary.deal_price ? @diary.deal_price.to_s.gsub(/\.0/,'')<<'万' : '暂无' %></td>
          </tr>
          <tr>
            <td colspan="4">
              <div class="diary_continfobox f_l">
                <strong>装修风格：</strong><%STYLES.sort.each do |k| -%><%if @diary.style.to_i==k[0].to_i%><%= link_to k[1],search_diaries_for_options(:style => k[0]), :target => "_blank"%><%end%><%end -%>
              </div>
              <div class="diary_continfobox f_l">
                <strong>装修方式：</strong><%MODELS.sort.each do |k| -%><%if @diary.model.to_i==k[0].to_i%><%= link_to k[1],search_diaries_for_options(:model => k[0]), :target => "_blank"%><%end%><%end -%>
              </div>
              <div class="diary_continfobox2 f_l">
                <strong>所属房型：</strong><%ROOM.sort.each do |k| -%><%if @diary.room.to_i==k[0].to_i%><%= link_to k[1],search_diaries_for_options(:room => k[0]), :target => "_blank"%></a><%end%><%end -%>
              </div>
            </td>
          </tr>
          <tr>
            <td><strong>最新更新：</strong></td>
            <td colspan="3"><%= @diary.order_time.strftime("%Y-%m-%d") %>&nbsp;&nbsp;&nbsp;阅读：(<%= @diary.pv %>) 次&nbsp;&nbsp;&nbsp;评论：(<%= @diary.remarks_count %>) 次</td>
          </tr>
          <tr>
            <td colspan="4"class="diary_contbtnbox"><input type="hidden" id="diary_id" value="<%=@diary.id%>"/>
              <div class="diary_continfobtn"><a class="f_l to_vote_one_for_me" style="cursor:pointer;"></a><span class="f_l">总票数：
                  <label id="vote_num">
                    <input type="hidden" id="vote_for_me" value="<%=($redis.get "diary/show/#{@diary.id}/toupiao").to_i%>"/>
                    <%= ($redis.get "diary/show/#{@diary.id}/toupiao").to_i %></label>
                </span><span class="f_l">当月票数：
                  <label id="vote_num_month">
                    <input type="hidden" id="vote_for_me_month" value="<%= ($redis.get "diary/show/#{@diary.id}/dangyuetoupiao").to_i %>"/>
                    <%= ($redis.get "diary/show/#{@diary.id}/dangyuetoupiao").to_i %></label>
                </span></div></td>
          </tr>
        </table>
      </div>
      <div class="diary_contmap f_r">
        <div class="diary_contmappic"><img src="<%= @diary.master_picture ? @diary.master_picture.url : 'http://img3.51hejia.com/img/zxdpimg/zxdp_nopic.jpg'%>" /></div>
      </div>
    </div>
    <div class="diary_contlist" id="diary_contlist">
      <%= render :partial => "diary_posts", :locals => { :diary => @diary, :page => @page, :diary_posts => @diary_posts } %>
    </div>
  </div>
</div>

<%= increase_pv_image_tag "decoration_diary", @diary.id %>
<div style="display:none;" deco_frim_popedom="<%= @firm.popedom%>" id="decoration_diary_show"></div>