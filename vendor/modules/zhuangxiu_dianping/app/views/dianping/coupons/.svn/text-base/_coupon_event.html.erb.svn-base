<!--content_code-->
<% 
  html_metadata = HtmlMetadata.find_by_page_id("#{CITIES[@user_city_code.to_i]}:装修点评:优惠券终端页")
  @title, @description, @keywords = html_metadata.title % {:firm_name => @firm.name_abbr}, html_metadata.description, html_metadata.keywords  
  firm_sub_menu  
  location "#{link_to @firm.name_abbr, firm_url(:id => @firm.id,:trailing_slash => "/")}"
%>
<% dp_js 'dianping/coupons/show.js'%>
<%# stylesheet jquery_resource(:plugin => 'fancybox', :version => '1.3.1', :resource => :css) %>
<%# javascript jquery_resource(:plugin => 'fancybox', :version => '1.3.1', :resource => "jquery.fancybox.js") %>
<%= render :partial => "dianping/deco_ideas/deco_ideas_register_pop"%>
<div class="width960 clearfix margin10">
  <div class="zxdp2011_diyq_contl f_l">
    <div class="zxdp2011_diyq_conttab">
      <ul class="clearfix">
        <% if @coupon %><li class="<%= params[:action] == 'coupon' ? 'active' : '' %>">现金券</li><% end -%>
        <% if @event %><li class="<%= params[:action] == 'show' ? 'active' : '' %>">优惠活动</li><% end -%>
      </ul>
    </div>
    <div class="zxdp2011_diyq_conttxt clearfix">
      <%= render :partial => "coupon_info" unless @coupon.blank? %>
      <%= render :partial => "event_info" unless @event.blank? %>
    </div>
  </div>
  <div class="zxdp2010_r f_r">
    <%= render :partial => "dianping/firms/firm_info" %>
    <%#= render :partial => "dianping/firms/firm_basic_info", :locals => {"z_style" => true} %>
    <%= render :partial => "dianping/shared/firm_right_list/gongdi" %>
    <%= render :partial => "dianping/shared/firm_promotion_coupon" %>
    <%= render :partial => "dianping/shared/firm_promotion_event" %>
    <%= render :partial => "dianping/shared/firm_new_message" %>
  </div>
</div>
<!--end_content_code-->
