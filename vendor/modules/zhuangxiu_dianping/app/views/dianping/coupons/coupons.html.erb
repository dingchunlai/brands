<div class="width960 clearfix margin10">
  <!-- 左边部分 -->
  <div class="zxdp2010_l f_l">
    <script type="text/javascript">
        $(function(){
          $(".diyq_listtxt ul:first").show();
                                  
          $(".diyq_listimg").mouseover(
                function(){
                    if(!$(".diyq_coupon").is(":animated")){$(".diyq_coupon").show();}
                                      });	
          $(".diyq_listimg").mouseout(
                function(){
                    $(".diyq_coupon").hide();
                                      });	
          $(".diyq_coupon").mouseover(
                function(){
                    if(!$(".diyq_coupon").is(":animated")){$(".diyq_coupon").show();}
                                      });	
          $(".diyq_coupon").mouseout(
                function(){
                    $(".diyq_coupon").hide();
                                      });
          
          $(".diyq_listbtn a").click(
          function(){
                  $(".diyq_sms").show(300);
                  $(".diyq_smscont").show(300);
                                  });
                                          
          $(".diyq_smscloseup a").click(
          function(){
                  $(".diyq_smscont").hide(300);
                                  });	
          $(".diyq_smsexpand a").click(
          function(){
                  $(".diyq_smscont").show(300);
                                        });	
        });
      </script>
    <div class="diyq_list zxdp2011_dyqlieb clear">
      <div class="diyq_listtxt clearfix">
      <% cache @fragment_key, :expires_in => 5.minutes do %>
        <ul class="clearfix" style="display:block;">
          <% @coupons.each do |coupon| %>
            <%= render :partial => 'coupon', :locals => {:coupon => coupon} %>
          <% end %>
        </ul>
        <div class="pagination f_r"><%= will_paginate @coupons, :params => {:trailing_slash => true }%></div>
      <% end -%>
      </div>
    </div>
  </div>
  <!-- 右边部分 -->
  <%= render :partial => "dianping/shared/dianping_right_list"%>
</div>
