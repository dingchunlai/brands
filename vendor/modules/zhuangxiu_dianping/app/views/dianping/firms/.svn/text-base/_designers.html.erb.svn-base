<div class="zxdp2010_cur margin10">
  <h3>设计师</h3>
  <div class="zxdp2010_more"><a href="<%= firm_designers_url(:firm_id => @firm.id) %>" target="_blank">更多 &gt;&gt; </a></div>
  <div class="zxdp2010_txt zxdp2010_shejln">
    <ul>
      <% @designers.each do |designer| %>
      <li class="clearfix">
        <div class="zxdp2010_shejsimg f_l">
          <%= link_to designer_avatar(designer), designer_url(:id => designer.id), :target => '_blank'  %>
        </div>
        <div class="zxdp2010_shejstxt f_r">
        <h5><label><%= link_to "[详细]", designer_url(:id => designer.id) %></label><%= link_to truncate_u(designer.DESNAME,8), designer_url(:id => designer.id), :target => '_blank' %></h5>
          <span>案例：<em><%= designer.cs.count %></em>篇</span> <span>设计费：<%= designer.desfee_text %></span>
        </div>
      </li>
      <% end -%>
    </ul>
  </div>
</div>
