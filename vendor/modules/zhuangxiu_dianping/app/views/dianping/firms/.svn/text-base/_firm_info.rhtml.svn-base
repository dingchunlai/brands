<div id="top_deco_impression" class="zxdp2010_cur margin10">
  <h3><%= @firm.name_abbr %></h3>
  <div style="overflow: hidden;" class="zxdp2010_txt zxdp2010_kbtop">
    <table cellspacing="0" cellpadding="0" border="0" width="220">
      <tbody>
        <tr>
          <td align="left" width="70" valign="middle" height="24">设计：<font color="#cc0000"><strong><%= @firm.design_praise %></strong></font></td>
          <td align="left" valign="middle" colspan="2">施工：<font color="#cc0000"><strong><%= @firm.construction_praise %></strong></font></td>
          <td align="left" width="80" valign="middle">服务：<font color="#cc0000"><strong><%= @firm.service_praise %></strong></font></td>
        </tr>
        <tr>
          <td align="left" valign="middle" height="24" colspan="4">主打价位：<%= @firm.price_text %>  擅长风格：<%= @firm.style.nil? ? "暂无" : DecoFirm::STYLES[@firm.style]%> </td>
        </tr>
        <tr>
          <td align="left" valign="middle" height="24" colspan="4">
            <span>公司地址：</span>
            <div class="firm_show_address_2011" style="float: left; width: 160px;">
              <div id="<%= 'ScrollMe1' if firm_address(@firm).size > 1 %>" class="firm_show_address1_2011">
                <% firm_address(@firm).each do |address| %>
                  <p title="<%= address %>"><%= address%></p>
                <% end%>
              </div>
            </div>
            <script type="text/javascript">new srcMarquee("ScrollMe1",0,1,808,20,30,3000,300,20)</script>
          </td>
        </tr>
        <tr>
          <td align="left" valign="middle" height="24" colspan="4">
            <span>在线联系:</span>
            <div class="f_r" style="width:160px;">
              <% if @firm.web_qq and @firm.web_qq.strip %>
                <% for qq in @firm.web_qq.strip.split(",") %>
                  <a href="http://wpa.qq.com/msgrd?v=3&amp;uin=<%= qq.scan(/\d*/).first %>&amp;site=qq&amp;menu=yes" target="_blank" onclick="_gaq.push(['_trackEvent','效果', 'QQ交谈', '<%= @firm.name_zh %><%= request.host %><%= request.path %>', 1]);">
                    <img border="0" title="点击这里给我发消息" alt="点击这里给我发消息" src="http://wpa.qq.com/pa?p=2:<%= qq.scan(/\d*/).first %>:41" />
                  </a>
                <% end %>
              <% end %>
            </div>
          </td>
        </tr>
        <tr>
          <td align="left" valign="middle" height="24" colspan="4">
            联系电话：
            <font color="#cc0000">
              <strong>
                <% if @firm.district.to_i == 12122 and @firm.is_cooperation != 1 %>
                  025-87787742
                <% else %>
                  <% firm_tel(@firm).each do |ft| %>
                    <%= ft %>
                  <% end %>
                <% end %>
              </strong>
            </font>
          </td>
        </tr>
        <tr>
          <td align="left" valign="top" height="90">
            <div class="top_deco_impression_a1">
              <% if @firm.is_yuyue %>
                <%= link_to "",new_dianping_applicant_path(:deco_firm_id => @firm.id), :title => "预约送车费",:id => "applicant", :class => "applicant" %>
              <% else %>
                <%= image_tag("http://img1.51hejia.net/img/zxdpimg/top_deco_impression_7.jpg") %>
              <% end %>
            </div>
          </td>
          <td valign="top" colspan="2">
            <div class="top_deco_impression_a2">
              <% @coupon = fetch_firm_coupon(@firm.id) %>
              <% if @firm.is_coupon && @coupon %>
                <%= link_to("",firm_coupon_path(@coupon), :popup => true) %>
              <% else %>
                <%= image_tag("http://img1.51hejia.net/img/zxdpimg/top_deco_impression_8.jpg") %>
              <% end %>
            </div>
          </td>
          <td valign="top">
            <div class="top_deco_impression_a3">
              <% if @firm.is_service %>
                <%= link_to("",firm_deco_services_url(:firm_id => @firm.id)) %>
              <% else %>
                <%= image_tag("http://img1.51hejia.net/img/zxdpimg/top_deco_impression_9.jpg") %>
              <% end %>
            </div>
          </td>
        </tr>
        <tr>
          <td align="left" valign="top" height="45" colspan="4">
            <div class="top_deco_impression_free">
              <% if @firm.freedo == 1 %>
                <%= link_to("免费预约量房",new_dianping_applicant_path(:deco_firm_id => @firm.id), :title => "免费预约量房", :class => "firm_applicant")  %>
              <% else %>
                <%= link_to("预约量房",new_dianping_applicant_path(:deco_firm_id => @firm.id), :title => "预约量房", :class => "firm_applicant")  %>
              <% end %>
            </div>
          </td>
        </tr>
        <tr>
          <% @diaries_count = @firm.decoration_diaries.published.count %>
          <td align="left" valign="middle" height="27" colspan="2">
            <%= link_to("装修日记<font color='#cc0000'>(#{@diaries_count})</font>", firm_decoration_diaries_url(:firm_id => @firm.id)) %>
          </td>
          <% @cases_count = @firm.cases.count %>
          <td align="left" valign="middle" colspan="2">
            <%= link_to("装修案例<font color='#cc0000'>(#{@cases_count})</font>", firm_cases_url(:firm_id => @firm.id)) %>
          </td>
        </tr>
        <tr>
          <td align="left" valign="middle" height="28" colspan="2">
            <% if controller.controller_name == "firms" and controller.action_name == "show" %>
              <%= link_to("网友评论<font color='#cc0000'>(#{@firm.remark_only_count})</font>", "#remarks") %>
            <% else %>
              <%= link_to("网友评论<font color='#cc0000'>(#{@firm.remark_only_count})</font>", "http://#{request.host}/#{@firm.id}#remarks") %>
            <% end %>
          </td>
          <% @factories_count = @firm.factories.count %>
          <td align="left" valign="middle" colspan="2">
            <%= link_to("在建工地<font color='#cc0000'>(#{@factories_count})</font>", firm_factories_url(:firm_id => @firm.id)) %>
          </td>
        </tr>
        <tr>
          <td height="0"></td>
          <td width="40"></td>
          <td width="30"></td>
          <td></td>
        </tr>
      </tbody></table>
  </div>
</div>
<script type="text/javascript">
  window.onload = function() {

    // 在线预约公司弹出窗口
    $('.firm_applicant').fancybox({
      'autoDimensions' : false,
      'width':580,
      'height': 295,
      "scrolling" : "no",
      "titleShow": false,
      onComplete	:	function() {
        $('#new_applicant').validate({
          submitHandler: function(form) {
            save_applicant();
          }
        })
      }
    });

    // 在线预约公司弹出窗口
    $('#applicant').fancybox({
      'autoDimensions' : false,
      'width':580,
      'height': 295,
      "scrolling" : "no",
      "titleShow": false,
      onComplete	:	function() {
        $('#new_applicant').validate({
          submitHandler: function(form) {
            save_applicant();
          }
        })
      }
    });


  }


  function save_applicant() {
    if ($("#applicant_tel").val().search("^-?\\d+$") == 0 && $("#applicant_tel").val().length==11) {
      $('#applicant_submit').attr("disabled",true);
      $.post($('#new_applicant').attr("action"), $('#new_applicant').serialize(), function(data) {
        if (data.substring(0,1) == 1) {
          alert("预约保存成功.");
          _gaq.push(['_trackEvent','效果', '免费量房', data.substring(1), 1]);
          $.fancybox.close();
        }else{
          alert("预约保存失败");
        };
        $('#applicant_submit').removeAttr("disabled");
        return false;
      });
    }else{
      alert("您的手机号有误，请重新输入！");
      return false;
    }
    return false;
  };
</script>