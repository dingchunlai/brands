<li class="zxdp_phbhack">
  <h3>地区排行TOP10</h3>
  <table width="100%" border="0" cellspacing="0" cellpadding="0">
    <tr class="zxdp_phbbgcolor">
      <td width="31">&nbsp;</td>
      <td width="23">&nbsp;</td>
      <td width="79"><label>名称</label></td>
      <td width="58">浏览量</td>
    </tr>
    <tr>
      <td colspan="5" class="zxdp_phbtd"><script type="text/javascript" src=" http://ajax.googleapis.com/ajax/libs/jquery/1.4.1/jquery.min.js"></script>
        <script type="text/javascript">
          $(function(){
            $(".zxdp_phbcont div:gt(0)").hide();
            $(".zxdp_phbtab dd:first").addClass("zxdp_phbactive");
            $(".zxdp_phbtab dd").mouseover(
            function(){
              $(this).addClass("zxdp_phbactive")
              .siblings().removeClass("zxdp_phbactive");
              $(".zxdp_phbcont div").eq($(this).index())
              .siblings().hide().end().show();
            }
          )
          }
        )
        </script>
        <div class="zxdp_phbposi">
          <dl class="zxdp_phbtab">
            <dd>徐</dd>
            <dd>普</dd>
            <dd>黄</dd>
            <dd>闵</dd>
            <dd>闸</dd>
            <dd>杨</dd>
            <dd>长</dd>
            <dd>嘉</dd>
            <dd class="zxdp_phbhack02">
              <label>浦东</label>
            </dd>
          </dl>
          <div class="zxdp_phbcont">
            <% num = -1 %>
            <% @firms_top_areas.each do |firms| %>
              <% num +=1 %>
              <div>
                <table width="100%" border="0" cellspacing="0" cellpadding="0">
                  <% if @promoted_top_areas[num].size > 0 %>
                    <% @promoted_top_areas[num].each_with_index do |firm,index| %>
                      <tr>
                        <td width="31">&nbsp;</td>
                        <td width="23"><strong><%= index + 1 %></strong></td>
                        <td width="79"><a href="<%= generate_firm_path(firm[0].id) %>" title="<%= firm[0].name_abbr %>" target="_blank"><%= firm[0].name_abbr %>&nbsp;<img src="http://js.51hejia.com/img/zxdpimg/zxdp2011_icon1.gif"/></a></td>
                        <td width="58"><%= firm[0].pv_count %></td>
                      </tr>
                    <% end %>
                  <% end %>
                  <% firms.each_with_index do |firm, index| %>
                    <% index += @promoted_top_areas[num].size %>
                    <tr>
                      <td width="31">&nbsp;</td>
                      <td width="23"><strong><%= index + 1 %></strong></td>
                      <td width="79"><a href="http://z.shanghai.51hejia.com/<%= firm.id %>" title="<%= firm.name_abbr %>" target="_blank"><%= firm.name_abbr %></a></td>
                      <td width="58"><%= firm.pv_count %></td>
                    </tr>
                  <% end %>
                </table>
              </div>
            <% end %>
          </div>
        </div></td>
    </tr>
  </table>
</li>