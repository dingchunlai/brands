<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
<html lang="ru">
<head>
	<title></title>
	<meta http-equiv="Content-Type" content="text/html;charset=UTF-8">
	<style type="text/css" media="screen">
		label.error {
		    float: none; color: red; padding-left: 1.5em; vertical-align: top;
		    background :url(http://js.51hejia.com/img/icons/alert.gif) no-repeat left center;
		  }
	</style>

	<script type="text/javascript" src="http://js.51hejia.com/js/jquery/1.4.2/jquery.min.js"></script>
		<script src="http://js1.51hejia.com/js/jquery/plugins/fancybox/1.3.1/jquery.fancybox.js" type="text/javascript"></script>
	<script src="http://js4.51hejia.com/js/jquery/plugins/validate/1.5.5/jquery.validate.min.js" type="text/javascript"></script>
	<script src="http://js3.51hejia.com/js/jquery/plugins/validate/1.5.5/messages_cn.js" type="text/javascript"></script>
	
	<script type="text/javascript" charset="utf-8">
		
  jQuery(document).ready(function($) {
      // 在建工地预约参观 弹出窗口

      $('#register_form').validate({
          submitHandler: function(form) {
              save_register();
          }
      });

      function save_register() {
          if ($("#deco_register_phone").val().search("^-?\\d+$") == 0 && $("#deco_register_phone").val().length==11) {
              $('#deco_register_submit').attr("disabled",true);
              $.post($('#register_form').attr("action"), $('#register_form').serialize(), function(data) {
                  if (data != 1) {
                      alert("预约保存成功.")
                      //parent.$.fancybox.close();
											$("#aaaa").html("<div style='color:red;font-size:20px;text-align:center;margin-top:50px'>预约保存成功</div>");
                  }else{
                      alert("预约保存失败");
                  };
                  $('#deco_register_submit').removeAttr("disabled");
                  return false;
              });
          }else{
              alert("您的手机号有误，请重新输入！");
              return false;
          }
          return false;
      };
  });
  

	</script>
	
</head>
<body>
	<!-- 预约单弹出框 -->
	<style type="text/css">
	  .gsl_yy2 td{
	    padding :2px 4px;
	  }
	  .gsl_yy2 h4 {
	    display: block;
	    height: 25px;
	    line-height: 25px;
	    margin: 2px 25px;
	  }
	</style>
	<div class="gsl_yy2"  style="position:absolute;left:0;top:1px;width:500px;background:url(http://js.51hejia.com/img/zxdpimg/art_10.jpg) repeat-x scroll 0 0 #FFFFFF">
	  <div><h4>预约单</h4></div>
	  <% form_for [:dianping, @deco_register], :html => {:id => "register_form"} do |f| -%>
	    <table width="80%" border="0" cellspacing="0" cellpadding="0" style="margin:20px auto" id="aaaa" data-aaa="open">
	      <tr>
	        <td align="right" width="90">姓名：</td>
	        <td><%= f.text_field :name, :size => 23, :class => "required" %><span>*</span></td>
	      </tr>
	      <tr>
	        <td align="right" width="90">性别：</td>
	        <td><%= f.select :sex, DecoRegister::SEX ,{ :include_blank => "- 请选择 -"}, {:class => "required"} %><span>*</span></td>
	      </tr>
	      <tr>
	        <td align="right" width="90">所在城市：</td>
	        <td><%= f.text_field :in_city, :size => 23 %></td>
	      </tr>
	      <tr>
	        <td align="right" width="90">联系电话：</td>
	        <td><%= f.text_field :phone, :size => 23 , :class => "required"%><span>*</span></td>
	      </tr>
	      <tr>
	        <td align="right" width="90">E-mail：</td>
	        <td><%= f.text_field :email, :size => 23, :class => "required" %><span>*</span></td>
	      </tr>
	      <tr>
	        <td align="right" width="90">希望参观时间：</td>
	        <td><%= f.select :the_time_to_visit, DecoRegister::THE_TIME_TO_VISIT , :include_blank => "- 请选择 -"%></td>
	      </tr>
	      <tr>
	        <td align="right" width="90" valign="top">备注：</td>
	        <td><%= f.text_area :remark,:rows=>2,:cols => 25 %></td>
	      </tr>
	      <%= f.hidden_field :event_id, :value => params[:event_id] %>
	      <tr>
	        <td colspan="2" style="color:red;">温馨提示：请输入正确手机号，方便装修公司及时和您联系，谢谢！</td>
	      </tr>
	      <tr>
	        <td colspan="2">
	          <div class="gsl_btndiv">
						<input type="hidden" name="back_url" value="<%= params[:back_url]%>" id="back_url">
	            <%= f.submit "预约", :class => "gsl_zjgd_btn f_l"  %>
	            <%= f.submit "返回", :class => "gsl_zjgd_btn f_r", :type => "button", :id => "close_box"%>
	          </div>
	        </td>
	      </tr>
	    </table>
	  <% end -%>
	</div>
	
</body>
</html>