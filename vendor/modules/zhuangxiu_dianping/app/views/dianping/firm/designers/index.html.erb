<% html_metadata = HtmlMetadata.find_by_page_id("#{CITIES[@user_city_code.to_i]}:装修点评:公司设计师列表页") %>
<% @title = html_metadata.title % {:firm_name => @firm.name_zh} %>
<% firm_sub_menu  %>
<% location "#{link_to @firm.name_abbr,firm_url(:id => @firm.id,:trailing_slash => "/")} > 设计师列表"%>
<%= render :partial => "dianping/shared/firm_factory_pop"%>
<!--content_code-->
<div class="width960 clearfix margin10">
  <% cache @fragment_key , :expires_in => 5.minutes do %>
    <div class="zxdp2010_l f_l">
      <div class="zxdp2010_sjslist">
        <h3>设计师</h3>
        <div class="zxdp2010_sjslisthack"></div>
        <ul class="margin10 clearfix">
          <% @designers.each do |designer|%>
            <li>
              <div class="zxdp2010_sjslistimg f_l"><%= link_to designer_avatar(designer), designer.url, :target => "_blank" %></div>
              <div class="zxdp2010_sjslisttxt f_r">
                <h4>设计师：<%= link_to truncate_u(designer.DESNAME,5), designer.url, :target => "_blank" %></h4>
                <p>设计费：<%= designer.desfee_text %></p>
                <p style="overflow:hidden">擅长风格：<%= designer.style_text %></p>
                <p>从业年限：<%= designer.desage_text %></p>
              </div>
            </li>
          <% end -%>
        </ul>
        <div class="zxdp2010_sjsnum f_l">共有<span><%= @designers.total_entries%></span>名设计师 </div>
        <%= will_paginate @designers %>
      </div>
    </div>
  <% end -%>
  <div class="zxdp2010_r f_r">
    <%= render :partial => 'dianping/shared/firm_right_list' %>
  </div>

</div>
