<% html_metadata = HtmlMetadata.find_by_page_id("#{CITIES[@user_city_code.to_i]}:装修点评:公司设计理念列表页") %>
<% @title = html_metadata.title % {:firm_name => @firm.name_zh} %>
<% firm_sub_menu  %>
<% location "#{link_to @firm.name_abbr,firm_url(:id => @firm.id,:trailing_slash => "/")} > #{($redis.get("deco_idea_#{@firm.id}").nil?) ? '设计理念' : $redis.get("deco_idea_#{@firm.id}")}列表"%>

<%= render :partial => "dianping/shared/firm_factory_pop"%>
<div class="width960 clearfix margin10">
  <div class="zxdp2010_l f_l">
    <div class="zxdp2010_sjlnlist">
      <h3><%= ($redis.get("deco_idea_#{@firm.id}").nil?) ? '设计理念' : $redis.get("deco_idea_#{@firm.id}") %></h3>
      <div class="zxdp2010_sjslisthack"></div>
      <ul class="margin10 clearfix">
        <% @deco_ideas.each do |idea|%>
          <li>
            <div class="zxdp2010_sjslistimg f_l">
              <%= link_to image_tag(idea.master_picture.url,:alt => idea.title), deco_idea_url(:id => idea.id), :target => "_blank"%>
            </div>
            <div class="zxdp2010_sjlnlisttxt f_r">
              <div class="zxdp2010_sjlntit clearfix">
                <h4><%= link_to h(idea.title) , deco_idea_url(:id => idea.id), :target => "_blank" %></h4>
                <span class="f_r"> <label><%= idea.remarks_count%></label> 人点评  <label><%= idea.pv%></label> 人浏览过</span></div>
              <p><%= truncate_u(idea.content,200,"...")%></p>
              <div class="zxdp2010_sjlntime f_r">
                <label><%= idea.created_at.to_date%></label>
              </div>
            </div>
          </li>
        <% end -%>
      </ul>
      <div class="zxdp2010_sjsnum f_l">共有<span><%=  @deco_ideas.total_entries%></span>套<%= @firm.name_abbr%>的设计理念 </div>
      <%= will_paginate @deco_ideas %>
    </div>
  </div>
  <div class="zxdp2010_r f_r">
    <%= render :partial => 'dianping/shared/firm_right_list' %>
  </div>
</div>
