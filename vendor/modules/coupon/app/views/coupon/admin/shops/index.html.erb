<h1>Listing shops</h1>

<table>
  <tr>
    <th>Name</th>
    <th>City</th>
    <th>District</th>
    <th>Biz zone</th>
    <th>Market place</th>
    <th>Address</th>
    <th>Telphone</th>
    <th>Latitude</th>
    <th>Longitude</th>
  </tr>

<% @shops.each do |shop| %>
  <tr>
    <td><%=h shop.name %></td>
    <td><%=h shop.city %></td>
    <td><%=h shop.district %></td>
    <td><%=h shop.biz_zone %></td>
    <td><%=h shop.market_place %></td>
    <td><%=h shop.address %></td>
    <td><%=h shop.telphone %></td>
    <td><%=h shop.latitude %></td>
    <td><%=h shop.longitude %></td>
    <td><%= link_to 'Show', shop %></td>
    <td><%= link_to 'Edit', edit_shop_path(shop) %></td>
    <td><%= link_to 'Destroy', shop, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

