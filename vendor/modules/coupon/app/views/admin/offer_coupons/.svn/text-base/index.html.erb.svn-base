<%= top_bar :title => '提供抵用券管理页',
            :button => ['提供抵用券列表', admin_offer_coupons_path],
            :breadcrumbs => [
                    ['Homepage', coupon_admin_index_path],
                    ['OfferCoupons', admin_offer_coupons_path]
            ]
%>
<div class="select-bar">
  <% form_for "", :url => admin_offer_coupons_path, :html => {:method => :get} do |f| %>
      商户名称:
      <input type="text" name="merchant" value=""/>
      <input type="radio" name="status" value="1" />已处理&nbsp;&nbsp;<input type="radio" name="status" value="0" />未处理
      <input type="submit" value="查找"/>
  <% end %>
</div>
<div class="table">
  <img src="/stylesheets/pretty_admin/img/bg-th-left.gif" width="8" height="7" alt="" class="left"/>
  <img src="/stylesheets/pretty_admin/img/bg-th-right.gif" width="7" height="7" alt="" class="right"/>
  <table class="listing" cellpadding="0" cellspacing="0">
    <tr>
      <th class="first">编号</th>
      <th><%= OfferCoupon.human_attribute_name("merchant")%></th>
      <th><%= OfferCoupon.human_attribute_name("city_id")%></th>
      <th><%= OfferCoupon.human_attribute_name("district_id")%></th>
      <th><%= OfferCoupon.human_attribute_name("linkman")%></th>
      <th><%= OfferCoupon.human_attribute_name("telphone")%></th>
      <th><%= OfferCoupon.human_attribute_name("status")%></th>

      <th colspan=3 class="last">操作</th>
    </tr>
    <% @offer_coupons.each_with_index do |offer_coupon, index| %>
        <tr<%= (index % 2 == 0) ? '' : ' class="bg"' -%>>
          <td height="25"><%= offer_coupon.id %></td>
          <td><%= h offer_coupon.merchant %></td>
          <td><%= h offer_coupon.city.name %></td>
          <td><%= h offer_coupon.district.name %></td>
          <td><%= h offer_coupon.linkman %></td>
          <td><%= h offer_coupon.telphone %></td>
          <td><%= (offer_coupon.status == 1) ? "已处理" : "未处理" %></td>
          <td>
            <% if can? :read, offer_coupon %>
                <%= link_to '查看', admin_offer_coupon_path(offer_coupon) %>
            <% else %>
                &nbsp;
            <% end %>
          </td>
          <td>
            <% if can? :udpate, offer_coupon %>
                <%= link_to '修改状态', edit_admin_offer_coupon_path(offer_coupon) %>
            <% else %>
                &nbsp;
            <% end %>
          </td>
          <!--<td><%#= link_to '删除', admin_offer_coupon_path(offer_coupon), :confirm => 'Are you sure?', :method => :delete %></td>-->
        </tr>
    <% end %>
  </table>
  <% unless @offer_coupons.empty? -%>
      <%= will_paginate @offer_coupons, :class => "digg_pagination" -%>
  <% end -%>
</div>