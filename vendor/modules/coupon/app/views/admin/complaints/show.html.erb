<%= top_bar :title => '抵用券投诉管理页',
            :button => ['新增投诉', new_admin_complaint_path],
            :breadcrumbs => [
              ['Homepage', coupon_admin_index_path],
              ['Complaints', admin_complaints_path]
            ]
%>
<div class="table">
  <img src="/stylesheets/pretty_admin/img/bg-th-left.gif" width="8" height="7" alt="" class="left" />
  <img src="/stylesheets/pretty_admin/img/bg-th-right.gif" width="7" height="7" alt="" class="right" />
  <table class="listing form" cellpadding="0" cellspacing="0">
    <tr>
      <th class="full" colspan="2">投诉信息</th>
    </tr>
    <tr>
      <td class="first"><strong>是否有效</strong></td>
      <td class="last"><%= @complaint.is_valid? ? "是" : "否" %></td>
    </tr>
    <tr class="bg">
      <td class="first" width="172"><strong><%= Complaint.human_attribute_name("coupon_id") %></strong></td>
      <td class="last"><%= link_to @complaint.coupon.title, admin_coupon_path(@complaint.coupon) %></td>
    </tr>
    <tr>
      <td class="first"><strong><%= Complaint.human_attribute_name("name") %></strong></td>
      <td class="last"><%= h @complaint.name %></td>
    </tr>
    <tr class="bg">
      <td class="first" width="172"><strong><%= Complaint.human_attribute_name("telphone") %></strong></td>
      <td class="last"><%= h @complaint.telphone %></td>
    </tr>
    <tr>
      <td class="first" width="172" valign="top"><strong><%= Complaint.human_attribute_name("body") %></strong></td>
      <td class="last"><%= h @complaint.body %></td>
    </tr>
    <tr class="bg">
      <td class="first" width="172">&nbsp;</td>
      <td class="last">&nbsp;</td>
    </tr>
  </table>
</div>