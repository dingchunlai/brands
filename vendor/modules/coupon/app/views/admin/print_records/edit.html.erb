<%=include_jquery_easy_validator%>
<%= top_bar :title => '打印记录编辑页',
            :button => ['打印列表', admin_print_records_path],
            :breadcrumbs => [
              ['首页', coupon_admin_index_path],
              ['打印列表', admin_print_records_path],
              ['编辑信息']
            ]
%>

<% form_for(@print_record, :url => admin_print_record_path(@print_record)) do |f| %>
  <%= f.error_messages %>
  <div class="table">
    <img src="/stylesheets/pretty_admin/img/bg-th-left.gif" width="8" height="7" alt="" class="left" />
    <img src="/stylesheets/pretty_admin/img/bg-th-right.gif" width="7" height="7" alt="" class="right" />
    <table class="listing form" cellpadding="0" cellspacing="0">
      <tr>
        <th class="full" colspan="2">修改打印记录信息</th>
      </tr>
      <tr class="bg">
        <td class="first" width="172"><strong><%= f.label :month %></strong></td>
        <td class="last"><%= f.text_field :month, :class => "text", :value => f.object.month && f.object.month.strftime("%Y-%m-%d") , :reg => '^2\d\d\d-[01]?\d-[0123]?\d$', :tip => "请输入正确的日记格式!" %></td>
      </tr>
      <tr class="bg">
        <td class="first" width="172"><strong><%= f.label :city %></strong></td>
        <td class="last"><%= f.select :city, City.used_cities.map{|c| [c.name, c.pinyin]}.unshift(['-请选择-', '']), {}, :class => "text", :reg => '^\S+$', 
          :tip => "请选择城市" %></td>
      </tr>
      <tr>
        <td class="first" width="172"><strong><%= f.label :amount %></strong></td>
        <td class="last"><%= f.text_field :amount, :class => "text", :reg => '^[1-9]\d*$', :tip => "必须*" %></td>
      </tr>
      <tr>
        <td colspan="2"><%= f.submit '提交' %></td>
      </tr>
    </table>
  </div>
<% end %>
<script src="http://js.51hejia.com/js/jquery.uploadify.v2.1.0.min.js" type="text/javascript"></script>
<script type="text/javascript">
  $(function(){
    //加载日期元素插件
    $("#print_record_month").datepicker({dateFormat: 'yy-mm-dd'});
  });
</script>
