<%= include_jquery_easy_validator %>
<%= top_bar :title => '商圈管理页',
            :button => ['商圈列表', admin_business_zones_path(:district_id => @business_zone.district_id)],
            :breadcrumbs => [
                    ['Homepage', coupon_admin_index_path],
                    ['BusinessZones', admin_business_zones_path(:district_id => @business_zone.district_id)]
            ]
%>
<% form_for(@business_zone, :url => admin_business_zone_path(@business)) do |f| %>
    <%= f.error_messages %>
    <div class="table">
      <img src="/stylesheets/pretty_admin/img/bg-th-left.gif" width="8" height="7" alt="" class="left"/>
      <img src="/stylesheets/pretty_admin/img/bg-th-right.gif" width="7" height="7" alt="" class="right"/>
      <table class="listing form" cellpadding="0" cellspacing="0">
        <tr>
          <th class="full" colspan="2">修改商圈信息</th>
        </tr>
        <tr class="bg">
          <td class="first" width="172"><strong><%= f.label :name %></strong></td>
          <td class="last"><%= f.text_field :name, :class => "text", :reg => '^\S+$', :tip => "必须*" %></td>
        </tr>
        <tr>
          <td class="first" width="172"><strong><%= f.label :pinyin %></strong></td>
          <td class="last"><%= f.text_field :pinyin, :class => "text", :reg => '^\S+$', :tip => "必须*" %></td>
        </tr>
        <tr class="bg">
          <td class="first" width="172"><strong><%= f.label :code_name %></strong></td>
          <td class="last"><%= f.text_field :code_name, :class => "text", :reg => '^\S+$', :tip => "必须*" %></td>
        </tr>
        <tr>
          <td class="first" width="172"><strong><%= f.label :city_id %></strong></td>
          <td class="last"><%= f.select :city_id, City.find(:all).collect { |item| [item.name, item.id] }, :include_blank => "请选择", :selected => @business_zone.city_id, :class => "text", :reg => '^\S+$', :tip => "必须*" %></td>
        </tr>
        <tr class="bg">
          <td class="first" width="172"><strong><%= f.label :district_id %></strong></td>
          <td class="last"><%= f.select :district_id, District.by_city(@business_zone.city_id).collect { |item| [item.name, item.id] }, :selected => @business_zone.district_id, :class => "text", :reg => '^\S+$', :tip => "必须*" %></td>
        </tr>
        <tr>
          <td colspan="2"><%= f.submit '提交' %></td>
        </tr>
      </table>
    </div>
<% end %>

<script type="text/javascript">
    $(function() {

        var city_id = "business_zone_city_id";
        var district_id = "business_zone_district_id";

        $("#" + city_id).change(function() {
            if ($(this).val() == "") {
                return null;
            }
            $('#' + district_id + ' option').remove();
            $('#' + district_id).append($('<option value="">loading...</option>'));
            $.ajax({
                url: '/remote/districts/',
                type: 'get',
                data: {'id' : $(this).val()},
                dataType: 'json',

                error: function(request) {
                    alert("请联系管理员");
                },

                success: function(data) {
                    $('#' + district_id + ' option').remove();
                    //if (data.length == 0) $('#' + district_id).append($('<option value="">没有地区</option>'));
                    $('#' + district_id).append($('<option value="">请选择</option>'));
                    for (var i = 0; i < data.length; i++) {
                        $('<option value="' + data[i][1] + '">' + data[i][0] + '</option>').appendTo('#' + district_id);
                    }
                }
            });
        });


    });
</script>