<%= top_bar :title => '抵用券管理',
            :button => ['返回列表', admin_coupons_path],
            :breadcrumbs => [
                    ['抵用券后台', coupon_admin_index_path],
                    ['抵用券管理', admin_coupons_path]
            ]
%>
<%=flash[:alert] && "<div style='padding: 15px; color:red; font-size: 22px'>#{flash[:alert]}</div>"%>
<div class="table">
  <img src="/stylesheets/pretty_admin/img/bg-th-left.gif" width="8" height="7" alt="" class="left"/>
  <img src="/stylesheets/pretty_admin/img/bg-th-right.gif" width="7" height="7" alt="" class="right"/>
  <table class="listing form" cellpadding="0" cellspacing="0">
    <tr>
      <th class="full" colspan=2>抵用券信息异常</th>
    </tr>
    <tr>
      <td class="first" width="80"><%= Coupon.human_name %>标题:</td>
      <td class="last"><%= @coupon.title %></td>
    </tr>
    <tr>
      <td class="first" width="80"><%= Coupon.human_name %>编号:</td>
      <td class="last"><%= @coupon.code %></td>
    </tr>
    <tr>
      <td class="full" colspan="2" style="color: red; font-size: 12px; font-weight:bold;">
        <% @errors.each do |k, v| %>
            <%= "#{Coupon.human_attribute_name(k)} : #{v}"%><br />
        <% end %>
      </td>
    </tr>
    <tr>
      <td class="full" colspan="2" style="color: blue; font-size: 12px; font-weight:bold;">
        <%= link_to "编辑该抵用券", edit_admin_coupon_path(@coupon) %>
      </td>
    </tr>
  </table>
</div>