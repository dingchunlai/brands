<%= top_bar :title => 'Q&A管理页',
  :button => ['创建Q&A', new_admin_coupon_faq_path],
  :breadcrumbs => [
  ['首页', coupon_admin_index_path],
  ['Q&A列表页', admin_coupon_faqs_path]
  ]
%>
<div class="select-bar">
  <%form_tag admin_coupon_faqs_path, :method => :get do %>
    <label>分类：<%= select_tag :group, options_for_select(FaqGroup.used_group.map{ |g| [g.name, g.id] }.unshift(['请选择', '']), @group) %></label>
    <label>问题：<input type="text" name="question" size="25" value="<%= @question %>" /></label>
    <label><input type="submit" value="搜索" /></label>
    <label style="margin-left: 100px;font-size: 15px;"><%= link_to "Q&A分组管理", group_admin_coupon_faqs_path, :style=> "color:red;" %></label>
  <%end%> 
</div>
<div style="clear:both;"></div>
<div class="table">
  <img src="/stylesheets/pretty_admin/img/bg-th-left.gif" width="8" height="7" alt="" class="left" />
  <img src="/stylesheets/pretty_admin/img/bg-th-right.gif" width="7" height="7" alt="" class="right" />
  <table class="listing" cellpadding="0" cellspacing="0">
    <tr>
      <th class="first">问题</th>
      <th>回答</th>
      <th>分类</th>
      <th class="last">操作</th>
    </tr>
  <% @coupon_faqs.each_with_index do |coupon_faq, index| %>
    <tr<%= (index % 2 == 0) ? '' : ' class="bg"' -%>>
      <td><%= truncate_u(coupon_faq.question, 15, '') %></td>
      <td><%= truncate_u(coupon_faq.answer, 25, '') %></td>
      <td>
        <% if can? :update, coupon_faq %>
          <%= coupon_faq.faq_group && coupon_faq.faq_group.name || link_to("绑定分类", edit_admin_coupon_faq_path(coupon_faq)) %>
        <% end %></td>
      <td>
        <% if can? :update, coupon_faq %>
          <%= link_to '编辑', edit_admin_coupon_faq_path(coupon_faq) %>
        <% end %>
      </td>
    </tr>
  <% end %>
  </table>
  <% unless @coupon_faqs.empty? -%>
    <%= will_paginate @coupon_faqs, :class => "digg_pagination" -%>
  <% end -%>
</div>
