<%= top_bar :title => '卖场门店管理页',
            :button => ['返回', admin_market_shops_path],
            :breadcrumbs => [
                    ['Homepage', coupon_admin_index_path],
                    ['Market_shops', admin_market_shops_path]
            ]
%>
<div class="table">
  <img src="/stylesheets/pretty_admin/img/bg-th-left.gif" width="8" height="7" alt="" class="left"/>
  <img src="/stylesheets/pretty_admin/img/bg-th-right.gif" width="7" height="7" alt="" class="right"/>
  <table class="listing form" cellpadding="0" cellspacing="0">
    <tr>
      <th class="full" colspan="2">卖场门店信息</th>
    </tr>
    <tr class="bg">
      <td class="first"><strong><%= MarketShop.human_attribute_name("name") %></strong></td>
      <td class="last"><%= @market_shop.name %></td>
    </tr>
    <tr class="bg">
      <td class="first"><strong><%= MarketShop.human_attribute_name("city_id") %></strong></td>
      <td class="last"><%= @market_shop.city.name %></td>
    </tr>
    <tr class="bg">
      <td class="first"><strong><%= MarketShop.human_attribute_name("district_id") %></strong></td>
      <td class="last"><%= @market_shop.district.name %></td>
    </tr>
    <tr class="bg">
      <td class="first"><strong><%= MarketShop.human_attribute_name("business_zone_id") %></strong></td>
      <td class="last">
        <% if @market_shop.business_zone %>
            <%= @market_shop.business_zone.name %>
        <% else %>
            -
        <% end %></td>
    </tr>
    <tr>
      <td class="first"><strong><%= MarketShop.human_attribute_name("market_id") %></strong></td>
      <td class="last"><%= @market_shop.market.name %></td>
    </tr>
    <tr>
      <td class="first"><strong><%= MarketShop.human_attribute_name("address") %></strong></td>
      <td class="last"><%= @market_shop.address %></td>
    </tr>
    <tr class="bg">
      <td class="first"><strong><%= MarketShop.human_attribute_name("telphone") %></strong></td>
      <td class="last"><%= @market_shop.telphone %></td>
    </tr>

  </table>
</div>
