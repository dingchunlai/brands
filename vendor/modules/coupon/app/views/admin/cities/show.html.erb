<%= top_bar :title => '城市管理页',
            :button => ['城市列表', admin_cities_path],
            :breadcrumbs => [
                    ['Homepage', coupon_admin_index_path],
                    ['Cities', admin_cities_path]
            ]
%>
<div class="table">
  <img src="/stylesheets/pretty_admin/img/bg-th-left.gif" width="8" height="7" alt="" class="left"/>
  <img src="/stylesheets/pretty_admin/img/bg-th-right.gif" width="7" height="7" alt="" class="right"/>
  <table class="listing form" cellpadding="0" cellspacing="0">
    <tr>
      <th class="full" colspan="2">城市信息</th>
    </tr>
    <tr class="bg">
      <td class="first"><strong><%= City.human_attribute_name("name") %></strong></td>
      <td class="last"><%= @city.name %></td>
    </tr>
    <tr>
      <td class="first"><strong><%= City.human_attribute_name("pinyin") %></strong></td>
      <td class="last"><%= @city.pinyin %></td>
    </tr>
    <tr class="bg">
      <td class="first"><strong><%= City.human_attribute_name("code_name") %></strong></td>
      <td class="last"><%= @city.code_name %></td>
    </tr>
    <tr>
      <td class="first"><strong><%= City.human_attribute_name("districts_count") %></strong></td>
      <td class="last"><%= @city.districts_count %></td>
    </tr>

  </table>
</div>
