<%= top_bar :title => '省份管理页',
            :button => ['创建省份', new_admin_province_path],
            :breadcrumbs => [
              ['Homepage', coupon_admin_index_path],
              ['Provinces', admin_provinces_path]
            ]
%>
<div class="table">
  <img src="/stylesheets/pretty_admin/img/bg-th-left.gif" width="8" height="7" alt="" class="left" />
  <img src="/stylesheets/pretty_admin/img/bg-th-right.gif" width="7" height="7" alt="" class="right" />
  <table class="listing form" cellpadding="0" cellspacing="0">
    <tr>
      <th class="full" colspan="2">省份信息</th>
    </tr>
    <tr class="bg">
	<td class="first"><strong><%= Province.human_attribute_name("name") %></strong></td>
<td class="last"><%= @province.name %></td>
</tr>
<tr>
	<td class="first"><strong><%= Province.human_attribute_name("pinyin") %></strong></td>
<td class="last"><%= @province.pinyin %></td>
</tr>
<tr class="bg">
	<td class="first"><strong><%= Province.human_attribute_name("code_name") %></strong></td>
<td class="last"><%= @province.code_name %></td>
</tr>
<tr>
	<td class="first"><strong><%= Province.human_attribute_name("cities_count") %></strong></td>
<td class="last"><%= @province.cities_count %></td>
</tr>

  </table>
</div>
