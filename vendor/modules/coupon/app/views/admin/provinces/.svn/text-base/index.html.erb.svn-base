<%= top_bar :title => '省份管理页',
  :button => ['创建省份', new_admin_province_path],
  :breadcrumbs => [
  ['Homepage', coupon_admin_index_path],
  ['Provinces', admin_provinces_path]
]
%>
<%=flash[:notice] && "<div style='padding: 15px; color:blue; font-size: 22px'>#{flash[:notice]}</div>"%>
<%=flash[:alert] && "<div style='padding: 15px; color:red; font-size: 22px'>#{flash[:alert]}</div>"%>
<% stylesheet jquery_resource(:plugin => 'fancybox', :version => '1.3.1', :resource => :css) %>
<% javascript jquery_resource(:plugin => 'fancybox', :version => '1.3.1', :resource => "jquery.fancybox.js") %>
<script>
  $(document).ready(function(){
    $('.relate').fancybox({
      'autoDimensions' : false,
      'width':580,
      'height': 295,
      "scrolling" : "no",
      "titleShow": false,
      onComplete	:	function() {
	        
      }
    });
  });
</script>
<div class="table">
  <img src="/stylesheets/pretty_admin/img/bg-th-left.gif" width="8" height="7" alt="" class="left"/>
  <img src="/stylesheets/pretty_admin/img/bg-th-right.gif" width="7" height="7" alt="" class="right"/>
  <table class="listing" cellpadding="0" cellspacing="0">
    <tr>
      <th class="first">编号</th>
      <th><%= Province.human_attribute_name("name") %></th>
      <th><%= Province.human_attribute_name("pinyin") %></th>
      <th><%= Province.human_attribute_name("code_name") %></th>
      <th><%= Province.human_attribute_name("cities_count") %></th>

      <th colspan=5 class="last">操作</th>
    </tr>
    <% @provinces.each_with_index do |province, index| %>
      <tr<%= (index % 2 == 0) ? '' : ' class="bg"' -%>>
        <td height="25"><%= province.id %></td>
        <td><%= province.name %></td>
        <td><%= province.pinyin %></td>
        <td><%= province.code_name %></td>
        <td><%= province.cities_count %></td>
        <% if can? :update, province %>
          <td><%= link_to '修改', edit_admin_province_path(province) %></td>
        <% end %>
        <% if can? :read, City %>
          <td><%= link_to '城市列表', admin_cities_path(:province_id => province) %></td>
        <% end %>
        <% if can? :create, City %>
          <td><%= link_to '添加城市', new_admin_city_path(:province_id => province) %></td>
        <% end %>
        <% if can? :create, City %>
          <td class=""><%= link_to '模块关联(多乐士)', relate_new_admin_location_relate_models_path(:location_id => province),:class => "relate" %></td>
          <td class=""><%= link_to '模块关联(金刷子)', relate_new_admin_location_relate_models_path(:location_id => province, :model_type => "jinshazi"),:class => "relate" %></td>
        <% end %>
      </tr>
    <% end %>
  </table>
  <% unless @provinces.empty? -%>
    <%= will_paginate @provinces, :class => "digg_pagination" -%>
  <% end -%>
</div>
