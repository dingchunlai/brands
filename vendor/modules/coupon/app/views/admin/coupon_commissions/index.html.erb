<%= top_bar :title       => '抵用券佣金管理页',
            :button      => ['创建抵用券佣金', new_admin_coupon_commission_path(:coupon_id => @coupon.id)],
            :breadcrumbs => [
                    ['首页', coupon_admin_index_path],
                    ['抵用券佣金管理', admin_coupon_commissions_path(:coupon_id => @coupon.id)]
            ]
%>
<div class="searchbar">
  <div style="color: #358; font-size: 13px;"><%= @coupon.title %> -- <%= @coupon.code %></div>
</div>
<div class="table">
  <img src="/stylesheets/pretty_admin/img/bg-th-left.gif" width="8" height="7" alt="" class="left"/>
  <img src="/stylesheets/pretty_admin/img/bg-th-right.gif" width="7" height="7" alt="" class="right"/>
  <table class="listing" cellpadding="0" cellspacing="0">
    <tr>
      <th class="first">编号</th>
      <th><%= CouponCommission.human_attribute_name("coupon_id") %></th>
      <th><%= CouponCommission.human_attribute_name("commission") %></th>
      <th><%= CouponCommission.human_attribute_name("activity_in") %></th>
      <th colspan=2 class="last">操作</th>
    </tr>
    <% @coupon_commissions.each_with_index do |coupon_commission, index| %>
        <tr<%= (index % 2 == 0) ? '' : ' class="bg"' -%>>
          <td height="25"><%= coupon_commission.id %></td>
          <td><%= coupon_commission.coupon_id %></td>
          <td><%= coupon_commission.commission %></td>
          <td><%= coupon_commission.activity_in.strftime("%Y年%m月") %></td>
          <td>
            <% if coupon_commission.activity_in.beginning_of_month < Time.zone.today.beginning_of_month %>
                <strike style="color: blue;">修改</strike>
            <% else %>
                <% if can? :update, CouponCommission %>
                    <%= link_to '修改', edit_admin_coupon_commission_path(coupon_commission) %>
                <% end %>
            <% end %>
          </td>
          <td><%#= link_to '删除', admin_coupon_commission_path(coupon_commission), :confirm => 'Are you sure?', :method => :delete %></td>
        </tr>
    <% end %>
  </table>
  <% unless @coupon_commissions.empty? -%>
      <%= will_paginate @coupon_commissions, :class => "digg_pagination" -%>
  <% end -%>
</div>
