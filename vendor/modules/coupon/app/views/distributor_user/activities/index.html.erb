<%= top_bar :title       => "#{VipDistributorActivity.human_name}管理",
            :button      => ['新增活动', new_distributor_user_activity_path],
            :breadcrumbs => [
                    ['首页', distributor_user_index_path],
                    ["#{VipDistributorActivity.human_name}管理", distributor_user_activities_path]
            ]
%>
<%= flash[:notice] && "<div style='padding: 15px; color:blue; font-size: 22px'>#{flash[:notice]}</div>" %>
<div class="table">
  <img src="/stylesheets/pretty_admin/img/bg-th-left.gif" width="8" height="7" alt="" class="left"/>
  <img src="/stylesheets/pretty_admin/img/bg-th-right.gif" width="7" height="7" alt="" class="right"/>
  <table class="listing" cellpadding="0" cellspacing="0">
	  <tr>
        <th class="first">编号</th>
	    <th><%= VipDistributorActivity.human_attribute_name("title")%></th>
        <th><%= VipDistributorActivity.human_attribute_name("begin_at")%></th>
        <th><%= VipDistributorActivity.human_attribute_name("end_at")%></th>
	<th colspan=4 class="last">操作</th>
	  </tr>
    <% @activities.each do |vip_distributor_activity| %>
        <tr>
          <td><%= h vip_distributor_activity.id %></td>
          <td><%= h vip_distributor_activity.title %></td>
          <td><%= h vip_distributor_activity.begin_at %></td>
          <td><%= h vip_distributor_activity.end_at %></td>
          <td><%= link_to '查看 & 管理图片', distributor_user_activity_path(vip_distributor_activity) %></td>
          <td><%= link_to '编辑', edit_distributor_user_activity_path(vip_distributor_activity) %></td>
          <td><%= link_to '删除', distributor_user_activity_path(vip_distributor_activity), :confirm => '确认删除?', :method => :delete %></td>
        </tr>
    <% end %>

    <% unless @activities.empty? %>
        <tr>
          <td colspan="8">
            <%= will_paginate @activities, :class => "digg_pagination" %>
          </td>
        </tr>
    <% end %>

  </table>
</div>