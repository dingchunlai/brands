<table width="100%" bgcolor="orange" cellpadding="0" cellspacing="1">
<tr>
    <th>ID</th>
    <th>名称</th>
    <th>编号</th>
    <th>剩余数量</th>
    <th>业务员</th>
</tr>
<% @coupons.each_with_index do |coupon, index| %>
<tr bgcolor="<%= (index % 2 == 0) ? "#ffffff" : "#eeeeee" %>">
    <td width="10%" align="center"><%= coupon.id%></td>
    <td width="40%" align="center"><%= coupon.title %></td>
    <td width="20%" align="left"><font color="<%= (coupon.existing_number <= CouponRemindMail::ALERT_NUM) ? "red" : "black"%>"><%= coupon.code %></font></td>
    <td width="10%" align="center"><%= coupon.existing_number %></td>
    <td width="20%">
      <%
         contract = Distributor::Contract.find(coupon.contract_id)
         ruser = RadminUser.first(:conditions => ["id = ?", contract.radmin_user_id])
      %>
      <%= ruser && ruser.rname %>
    </td>
</tr>
<% end %>
</table>