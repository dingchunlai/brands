<% content_for :html_head do %>
    <% set_coupon_page_meta_data @decofirm.name_zh, '', '' %>
    <link href="http://js.51hejia.com/css/zxdpcss.css?201011051" rel="stylesheet" type="text/css"/>
    <link rel="stylesheet" href="http://js.51hejia.com/colorbox/exp1/colorbox.css" type="text/css"/>
    <script type="text/javascript" src="http://js.51hejia.com/js/djq_tab.js"></script>
<% end %>

<div class="width960">
  <div class="djq_location">您当前的位置：<%= link_to "#{Coupon.human_name}首页", coupon_index_path %> >
    <span><%= @decofirm.name_zh %></span></div>
</div>
<div class="width960 margin10 clearfix">
  <div class="djq_l f_l">
    <div class="margin10 clearfix">
      <div class="djq_comimg f_l">
        <% if @store_photo %>
            <%= image_tag @store_photo.picture.url("300x180"), :alt=>"" %>
        <% else %>
            <%= image_tag "http://img3.51hejia.com/img/zxdpimg/nopic01.jpg", :alt=>"" %>
        <% end %>
      </div>
      <div class="djq_comtxt djq_lcur djq_comtxtinfo f_r">
        <h3><%= @decofirm.name_zh %></h3>
        <div class="djq_lcurtxt">
          <table width="362" border="0" cellspacing="0" cellpadding="0">
            <tr>
              <td><span>主打价位：</span><%= @decofirm.price_text.to_s.blank? ? "暂无" : @decofirm.price_text  %></td>
              <td><span>擅长风格：</span><%= DecoFirm::STYLES[@decofirm.style].to_s.blank? ? "暂无" : DecoFirm::STYLES[@decofirm.style] %></td>
            </tr>
            <tr>
              <td colspan="2"><span>公司地址：</span><%= @decofirm.address %></td>
            </tr>
            <tr>
              <td colspan="2"><span>联系电话：</span><%= @decofirm.telephone %></td>
            </tr>
            <tr>
              <td colspan="2"><span>在线联系：</span><%= @decofirm.business_hours %></td>
            </tr>
          </table>
          <div class="djq_comtxtmenu">日记<span>(<%= @decofirm.decoration_diaries.published.count %>)</span>  案例<span>(<%= @decofirm.cases.count %>)</span>  评论<span>(<%= @decofirm.remarks.count %>)</span>  在建工地<span>(<%= @decofirm.factories.count %>)</span>
            <%= link_to "[点击查看详情]", "http://z.#{TAGURLS[@decofirm.city.to_i]}.51hejia.com#{firm_path(:id => @decofirm.id)}", :target => "_blank" %>
          </div>
        </div>
      </div>
    </div>
    <div class="zxdp2010_anltup margin10">
      <div class="zxdp2010_attab">
        <h3>公司简介</h3>
      </div>
      <script type="text/javascript">
      $(function(){
          $("#djq_comzizhi").toggle(function(){
              $(this).removeClass("djq_comzizhitxt");
              $(".djq_comzizhibtn").text("收拢>>");
          },function(){
              $(this).addClass("djq_comzizhitxt");
              $(".djq_comzizhibtn").text("展开>>");
          })
      });
      $(function(){
          $(".djq_comzizhibtn").toggle(function(){
              $("#djq_comzizhi").removeClass("djq_comzizhitxt");
              $(".djq_comzizhibtn").text("收拢>>");
          },function(){
              $("#djq_comzizhi").addClass("djq_comzizhitxt");
              $(".djq_comzizhibtn").text("展开>>");
          })
      });
      </script>
      
      <div class="zxdp2010_atcont">
        <div id="djq_comzizhi" class="djq_comzizhitxt">
          <%= @decofirm.detail %>
        </div>
        <div class="djq_comzizhibtn">展开&gt;&gt;</div>        
      </div>
    </div>
    <% if @cases.size > 0 %>
    <div class="zxdp2010_anltup margin10">
      <div class="zxdp2010_attab">
        <h3>设计案例</h3>
      </div>
      <div class="zxdp2010_more"><a href="#" target="_blank"><%= link_to "更多&gt;&gt;", "http://z.#{TAGURLS[@decofirm.city.to_i]}.51hejia.com#{firm_path(:id => @decofirm.id)}/zhuangxiuanli"%></a></div>
      <div class="zxdp2010_atcont">
        <ul class="clearfix">
          <% @cases.each do |deco_case| %>
              <li>
                <%= link_to image_tag(deco_case.master_picture_url, :alt => deco_case.NAME), "http://z.#{TAGURLS[@decofirm.city.to_i]}.51hejia.com#{deco_case.url}", :target => "_blank" %>
                <%= link_to truncate_u(deco_case.NAME, 14), "http://z.#{TAGURLS[@decofirm.city.to_i]}.51hejia.com#{deco_case.url}", :target=>"_blank", :title => deco_case.NAME %>
              </li>
          <% end %>
        </ul>
      </div>
    </div>
    <% end %>
    <div class="djq_lcur margin10">
      <h3>该装修公司抵用券</h3>
      <script type="text/javascript">
  $(function() {
  	$('.djq_listbtn').hide();
    $('.djq_listcont li').mouseover(function() {
		$(this).addClass("djq_listcontbg")
				.siblings().removeClass("djq_listcontbg");
			$(".djq_listbtn").show();
	});
	$('.djq_listcont li').mouseout(function() {
		$(this).removeClass("djq_listcontbg");
			$(".djq_listbtn").hide();
	});
  });

</script>
      <div class="djq_lcurtxt">
        <ul class="djq_listcont clearfix">
          <% @coupons.each do |coupon| %>
              <li>
                <a href="<%= coupon_show_path(coupon) %>" target="_blank"><%= image_tag(coupon_image_url(coupon.montage_image_url), :alt => coupon.title) %></a>
                <h4><a href="<%= coupon_show_path(coupon) %>" target="_blank"><%= coupon.title %></a></h4>
                <p>截止: <%= coupon.activity_end_at %>
                  <span title="<%= coupon.distributor_short_title %>">[<%= coupon.distributor_short_title(6) %>]</span>
                </p>
                <address>
                  地址: <%= coupon.distributor_shop_address %>
                </address>
                <div class="djq_listbtn">
                  <a href="<%= new_coupon_download_path(:id => coupon.id) %>" title="下载到手机" target="_blank" class="djq_listbtn_a01"></a>
                  <a href="<%= coupon_print_path(:id => coupon.id) %>" title="打印" target="_blank" class="djq_listbtn_a02"></a>
                  <a href="javascript://" title="加入我的收藏夹" data="<%= coupon.id %>,<%= coupon.title %>" class="djq_listbtn_a03"></a>
                </div>
              </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
  <div class="djq_r f_r">
    <%= render :partial => '/share/popularity_week', :locals => {:tag_id => 0 } %>
    <%= render :partial => '/share/latesd_coupons' %>
    <%= render :partial => '/share/recommended_coupons' %>
  </div>
</div>