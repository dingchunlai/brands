<script type="text/javascript">
  jQuery(function($){
      //抵用券关键词搜索
      $('form[name=keyword_search]').submit(function(){
        var tf_keyword = $(this).find('input[name=keyword]');
        var kw = $.trim(tf_keyword.val());
        tf_keyword.val(kw);
        if (kw == ''){
          alert('请输入搜索关键词！');
        }else{
          window.open('/kw-' + kw + '-0.html', '_top');
        }
        return false;
      });

    });
</script>

