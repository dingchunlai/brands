<script>
	$(document).ready(function(){
		$("#botton_reset").click(function(){
			$("#update_pw").hide();
			$("#reset_pw").show();
		});
		$("#botton_update").click(function(){
			$("#update_pw").show();
			$("#reset_pw").hide();
		});
		$("#update_form").submit(function(){
			if($.trim($("#password").val()).length == 0){
				alert("请输入新密码");
				return false;
			}
			if($("#password").val() != $("#re_password").val()){
				alert("两次输入密码不同");
				return false;
			}
		});
	});
</script>
<%= render :partial => "sub_menu" %>
<div class="clearfix">
	<div id="update_pw">
	<% form_tag reset_password_paint_admin_paint_workers_path,:id => "update_form" ,:method => "post" do %>
		<%=hidden_field_tag "this_id" ,@painter_id%>
		<p>请输入新密码：<%=password_field_tag "password"%></p><br>
		<p>请再次输入新密码：<%=password_field_tag "re_password"%></p><br>
		<p><%=submit_tag "修改密码"%></p><br>
	<% end %>
		<p id="botton_reset" style="text-decoration:underline;color:red;cursor:pointer;">点击重置密码</p>
	</div>
	<div id="reset_pw" style="display:none;">
	<% form_tag reset_password_paint_admin_paint_workers_path, :method => "post" do %>
		<%=hidden_field_tag "this_id" ,@painter_id%>
		<%=hidden_field_tag "reset" ,"1"%>
		<p><%=submit_tag "初始化密码"%><em>注：初始化密码是把密码还原为默认密码</em></p><br>
	<% end %>
		<p id="botton_update" style="text-decoration:underline;color:red;cursor:pointer;">点击修改密码</p>
	</div>
</div>