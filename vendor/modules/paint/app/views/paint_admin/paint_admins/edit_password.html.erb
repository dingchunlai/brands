<script src="http://js.51hejia.com/js/jquery/plugins/validate/1.5.5/jquery.validate.min.js" type="text/javascript"></script>
<script src="http://js.51hejia.com/js/jquery/plugins/validate/1.5.5/messages_cn.js" type="text/javascript"></script>
<script type="text/javascript">
	$(document).ready(function(){
		$.validator.setDefaults({ 
			onkeyup: false
		});
		$("#update_password_form").validate({
		  rules: {
			confirm_password: {
		        equalTo: "#password"
		       }
		 },
		 messages: {
			confirm_password:{equalTo:"两次输入密码不一致"}
			}
		});
	});
</script>
<style type="text/css">
	label.error {
	background:url("http://js.51hejia.com/img/icons/alert.gif") no-repeat scroll left 4px transparent;
	color:red;
	float:none;
	padding-left:1.5em;
	vertical-align:middle;
	padding-top:5px;
	}
</style>
<%= render :partial => "sub_menu" %>
<div class="clearfix">
	<div >
	<% form_tag update_password_paint_admin_paint_admins_path,:id => "update_password_form" ,:method => "post" do %>
		<%=hidden_field_tag "id" ,@admin_id%>
		<p>请输入新密码：<%=password_field_tag "password", nil, :class => "required"%></p><br>
		<p>请再次输入新密码：<%=password_field_tag "confirm_password", nil , :class => "required" %></p><br>
		<p><%= submit_tag "修改密码"%></p><br>
	<% end %>
	</div>
</div>