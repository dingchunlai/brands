<%= render :partial => "sub_menu"%>
    <style type="text/css">
	.contact_table td{height:30px;line-height:30px;padding:0 5px;}
	.contact_table .odd{background:#fff;}
	.contact_table .even{background:#dedede;}
</style>
<div class="top-bar">
    <h1>油工派遣添加</h1>
  <div class="breadcrumbs">油漆工管理 / 油工派遣添加</div>
</div>
<div class="clearfix">
	<% form_for @paint_send , :url => "/paint_admin/online/send_create" do |f|%>
          <table width="100%" class="contact_table">
            <tr>
              <td align="right">服务地区：</td>
              <td><%= Province.name_for_code(@paint_worker.painter.province) %>-<%= City.name_for_code(@paint_worker.painter.city) %>
			   </td>
            </tr>
            <tr>
              <td align="right">姓名：</td>
              <td><%=f.text_field :people, :class => 'required' %></td>
            </tr>
            <tr>
              <td align="right">联系电话：</td>
              <td><%=f.text_field :phone, :class => 'required'  %></td>
            </tr>
            <tr>
              <td></td>
              <td><%= f.radio_button :send_type ,"新装修" ,:checked => true %>新装修&nbsp;&nbsp;<%= f.radio_button :send_type ,"重装修" %>重装修</td>
            </tr>
            <tr>
              <td align="right">电子邮件：</td>
              <td><%=f.text_field :email, :class => 'required email'  %></td>
            </tr>
            <tr>
              <td align="right">装修类型：</td>
              <td><%= f.select :room  ,options_for_select( PaintSend::ROOM.sort{|x,y| x[1] <=> y[1]}) %></td>
            </tr>
            <tr>
              <td align="right">房屋面积：</td>
              <td><%=f.text_field :area, :class => 'required number'  %></td>
            </tr>
			<tr><td align="right">备注：</td>
				<td><%=f.text_field :remark, :class => 'required number'  %></td>
			</tr></td>
            <tr>
              <td align="right">期望油漆装修时间：</td>
              <td>
                <select name="send_year">
                  <% (2010..2020).to_a.each do |i| %>
                  <option><%= i %></option>
                  <% end %>
                </select>年<select name="send_month">
                  <% (1..12).to_a.each do |i| %>
                  <option><%= i %></option>
                  <% end %>
                </select>月</td>
            </tr>
          </table>
          <br/>
		  <%= f.hidden_field :province, :value => @paint_worker.painter.province %>
		  <%= f.hidden_field :city, :value => @paint_worker.painter.city %>
		  <%= f.hidden_field :brand, :value => @paint_send.brand %>
		  <%= f.hidden_field :is_buy, :value => @paint_send.is_buy %>
		  <%= f.hidden_field :paint_worker_id, :value => @paint_worker.id%>
		  <%= f.submit "确认提交" ,:style => "cursor:pointer;" %>
        <% end %>
</div>