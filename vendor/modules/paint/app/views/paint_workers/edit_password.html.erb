<% title "【油漆工】密码修改_#{@paint_worker.USERBBSNAME}_和家网油漆施工频道" %>
<% keywords PAINT_KEYWORDS_1 %>
<% description PAINT_DESCRIPTION_1 %>
<script src="http://js.51hejia.com/js/jquery/plugins/validate/1.5.5/jquery.validate.min.js" type="text/javascript"></script>
<script src="http://js.51hejia.com/js/jquery/plugins/validate/1.5.5/messages_cn.js" type="text/javascript"></script>
<script type="text/javascript">
	$(document).ready(function(){
		$.validator.setDefaults({ 
			onkeyup: false
		});
		$("#update_password_form").validate({
		  rules: {
			confirm_password: {
		        equalTo: "#password"
		       }
		 },
		 messages: {
			confirm_password:{equalTo:"两次输入密码不一致"}
			}
		});
	});
</script>
<%= render :partial => '/shared/top_location', :locals => { :location => (link_to "#{@paint_worker.USERBBSNAME}的主页" ,paint_worker_admin_path,:target => '_self'), :location_end => "密码修改" }%>
<div class="width960 margin10 clearfix">
  <div class="yg_web_l f_l">
  	<%= render :partial => '/shared/front_admin_left'%>
  </div>
 	<div class="yg_web_r f_r"> 
    <div class="yg_web_rbox margin10"> 
      <div><%=render :partial => '/shared/front_admin_top', :locals => { :top_name => "密码修改" }%></div>
	  <div class="yg_web_infofb"> 
		<% form_tag '/paint_worker/update_password',:id => "update_password_form" ,:method => "post" do %>
       <table width="100%" border="0" cellspacing="0" cellpadding="0"> 
		  <tr> 
		    <td align="right">请输入新密码：</td> 
		    <td width="160"><%=password_field_tag "password", nil, :class => "required"%></td> 
		    <td>&nbsp;</td> 
		  </tr>
		  <tr> 
		    <td align="right">请再次输入新密码：</td> 
		    <td width="160"><%=password_field_tag "confirm_password", nil , :class => "required" %></td> 
		    <td>&nbsp;</td> 
		  </tr>
		  <tr> 
		    <td align="right">您的当前密码：</td> 
		    <td><%=password_field_tag "now_password", nil , :class => "required" %></td> 
		    <td><span style="color:red"><%= show_flash_message%></span><span>（请输入您的密码确认）</span></td> 
		  </tr> 
		  <tr> 
		    <td colspan="3" align="center"><%= submit_tag "确认修改" %></td> 
		    </tr> 
		</table> 
        <% end %>
      </div> 
    </div> 
  </div> 
</div>