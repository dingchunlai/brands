<% title "【油漆工】申请派遣油漆工_和家网油漆施工频道" %>
<% keywords PAINT_KEYWORDS_3 %>
<% description PAINT_DESCRIPTION_3 %>
<link rel="stylesheet" href=" http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.2/themes/base/jquery-ui.css" type="text/css" />
<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.2/jquery-ui.min.js"></script>
<script src=" http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.3/i18n/jquery-ui-i18n.min.js" type="text/javascript"></script>
<script src="http://js.51hejia.com/js/jquery/plugins/validate/1.5.5/jquery.validate.min.js" type="text/javascript"></script>
<script src="http://js.51hejia.com/js/jquery/plugins/validate/1.5.5/messages_cn.js" type="text/javascript"></script>
<script type="text/javascript">
	$(document).ready(function(){
		$("#datepicker").datepicker({ dateFormat: 'yy-mm-dd' });
		$.validator.setDefaults({ 
			onkeyup: false
		});
		$("#new_paint_send").validate();
	});
</script>
<%= render :partial => '/shared/top_location', :locals => { :location => "<a href='/paiqian' target='_self' title='申请派遣油漆工' >申请派遣油漆工</a>", :location_end => "填写申请信息" }%>
<!--content_code-->
<div class="width960 margin10 clearfix">
  <div class="yg_p1_l f_l">
    <div class="yg_current margin10">
      <h3>申请派遣油漆工</h3>
      <div class="yg_sqjsz_txt">
      	<h4 style="color:#f60;">第二步：</h4>
        <h4>填写您的申请信息：</h4>
        <% form_for @paint_send , :url => send_create_path do |f|%>
          <table width="100%" border="0" cellspacing="0" cellpadding="0">
            <tr>
              <td align="right"><strong>服务地区：</strong></td>
              <td><%= Province.name_for_code(@paint_send.province) %>-<%= City.name_for_code(@paint_send.city) %>
			   </td>
            </tr>
            <tr>
              <td align="right"><strong>姓名：</strong></td>
              <td><%=f.text_field :people, :class => 'required' %></td>
            </tr>
            <tr>
              <td align="right"><strong>联系电话：</strong></td>
              <td><%=f.text_field :phone, :class => 'required'  %></td>
            </tr>
            <tr>
              <td></td>
              <td><%= f.radio_button :send_type ,"新装修" ,:checked => true %>新装修&nbsp;&nbsp;<%= f.radio_button :send_type ,"重装修" %>重装修</td>
            </tr>
            <tr>
              <td align="right"><strong>电子邮件：</strong></td>
              <td><%=f.text_field :email, :class => 'required email'  %></td>
            </tr>
            <tr>
              <td align="right"><strong>装修类型：</strong></td>
              <td><%= f.select :room  ,options_for_select( PaintSend::ROOM.sort{|x,y| x[1] <=> y[1]}) %></td>
            </tr>
            <tr>
              <td align="right"><strong>房屋面积：</strong></td>
              <td><%=f.text_field :area, :class => 'required number'  %></td>
            </tr>
            <tr>
              <td align="right"><strong>期望油漆装修时间：</strong></td>
			  <td><%= f.date_select :hope_date ,:order => [:year,:month],:start_year => Time.now.year,:default => Time.now ,:end_year => -1.years.ago.year %></td>
            </tr>
          </table>
          <br/>
		  <%= f.hidden_field :province, :value => @paint_send.province %>
		  <%= f.hidden_field :city, :value => @paint_send.city %>
		  <%= f.hidden_field :brand, :value => @paint_send.brand %>
		  <%= f.hidden_field :is_buy, :value => @paint_send.is_buy %>
		  <%= f.hidden_field :paint_worker_id, :value => @paint_send.paint_worker_id%>
          <div class="yg_sqjsz_grsm">
            <%= render :partial => '/explanation/online_send_2' %>
          </div>
          <div class="yg_sqjsz_btn">
			<%= f.submit "同意服务条款，提交申请信息" ,:style => "cursor:pointer;" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="yg_p1_r f_r">
         <div class="yg_p1_rad margin10"><%= render :partial => "/shared/right_top_img"%></div>
    <div class="yg_current">
      	<%= render :partial => "/shared/help"%>
    </div>
    <div class="yg_current">
    	<%= render :partial => "/shared/paint_top10"%>
    </div>
  </div>
</div>
<!--content_code_end-->
