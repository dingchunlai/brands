<% title "【油漆工】案例列表_和家网油漆施工频道" %>
<% keywords PAINT_KEYWORDS_3 %>
<% description PAINT_DESCRIPTION_3 %>
<%= render :partial => '/shared/top_location', :locals => { :location => top_navigation(@location), :location_end => (@location == '全部案例' ? nil : @location ) }%>
<!--content_code--> 
<div class="width960 margin10 clearfix"> 
  <div class="yg_p1_l f_l"> 
  <% @cases.each_with_index do |c, index|%>
    <div class="yg_listp1 clearfix"> 
      <h3><a href="<%= get_paint_case_url c.id%>" target="_blank" title="<%= c.title%>"><%= c.title %></a></h3> 
      <%= essence(c) %> 
      <p><%= truncate(strip_tags(c.content),:length => 160 ,:omission => '') %><a href="<%= get_paint_case_url c.id%>" target="_self" title="查看全文">【查看全文】</a></p> 
      <div class="yg_listp1_img"><a href="<%= get_paint_case_url c.id%>" target="_self" title="<%= c.title%>"><img src="<%= c.pictures.blank? ? 'http://img3.51hejia.com/img/brandimg/jinshuazi.jpg' : c.pictures.first.url %>" /></a></div>
      <div class="yg_listp1_tags f_l"><span>房型：<%= PaintCase::ROOM.index(c.room) %></span></div> 
      <div class="yg_listp1_time f_r"><%= c.created_at.strftime("%Y-%m-%d %H:%M")%> 油漆工：<%= c.paint_worker.USERBBSNAME unless c.paint_worker.nil?%></div> 
    </div> 
  <% end %>
    <div class="pagination"><%= will_paginate @cases %></div> 
  </div> 
  <div class="yg_p1_r f_r">
    <div class="yg_p1_rad margin10"><%= render :partial => "/shared/right_top_img"%></div>
    <div class="yg_current">
      	<%= render :partial => "/shared/help"%>
    </div>
    <div class="yg_current">
    	<%= render :partial => "/shared/paint_top10"%>
    </div>
  </div>
   
</div> 
<!--content_code_end--> 