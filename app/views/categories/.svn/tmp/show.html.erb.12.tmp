    <div class="bpl_left f_l">
      <h3>
        <span class="bpl_l_more f_r"><a href="<%= LINK_URLS[@tag.TAGNAME]['资讯'] %>" target="_blank">>>更多</a></span><%= @tag.TAGNAME %>
        资讯</h3>

      <div class="bpl_l_text clearfix">
        <div class="bpl_l_t_left f_l">
          <% focus_news = promotion_items['资讯焦点图'] %>
          <% unless focus_news.nil? %>
            <div class="bpl_l_t_img"><%= promotion_image_tag focus_news %>
              <a href="<%= focus_news['url'] %>" target="_blank"><strong><%= focus_news['title'] %></strong></a>

              <p>
                <a href="<%= focus_news['url'] %>" target="_blank"><%= truncate focus_news['description'], :length => 80 %></a>
              </p></div>
          <% end %>
          <dl class="bpl_l_t_hot">
