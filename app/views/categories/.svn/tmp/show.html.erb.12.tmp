              list.each do |article|
                prefix = prefixes.shift || prefix
              %>
                <dd>
                  <span><strong><a href="<%= prefix['url'] %>" target="_blank"><%= prefix['title'] %></a></strong></span>|
                  <%= show_article_link article, :tag => @tag, :truncate => 15 %></dd>
              <% end %>
