        <ul class="bpl_r_ul02">
          <% vendors.each do |item| %>
            <li class="clearfix"><%=
              promotion_image_tag(item) +
                content_tag(:h5, link_to(item['title'], item['url'], :target => '_blank'))
            %>
              <span>经销商：<%= item['price_ago'] %></span><span>电话：<%= item['price_now'] %></span></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <% sidebar_ad2 = capture do %>
      <div class="b_ad04">
        <% if (ad = API_PROMOTION_MAPPING['广告']['品类'][@tag.TAGURL]) && (ad = ad['侧栏2']) %>
          <%= ad %>
        <% else %>
          <%= promotion_image_tag promotion_items['宽幅广告2'] if promotion_items['宽幅广告2'] %>
        <% end %>
      </div>
    <% end %>

    <% latest_articles = capture do %>
      <% unless @latest_articles.blank? %>
        <h3>最新文章</h3>

        <div class="bpl_r_text">
          <% first_article = @latest_articles.shift %>
          <h4><%= show_article_link first_article, :tag => @tag, :truncate => 12 %></h4>

          <p class="bpl_r_p"><%= truncate strip_tags(first_article.SUMMARY), :length => 50 %></p>
          <ul class="bpl_r_ul03">
            <% @latest_articles.each do |latest_article| %>
              <li><%= show_article_link latest_article, :tag => @tag, :truncate => 16 %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
