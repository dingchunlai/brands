<%
@page_title = @event.subject
@page_meta_keywords = @event.html_keywords
@page_meta_desc = @event.html_description
%>

<div class="b_width960 margin10">
  <div class="">
    位置导航：<a href="/huodong" target="_blank">活动首页</a> >
    <a href="<%=list_url('', @event.first_tag.TAGURL)%>" target="_blank"><%=@event.first_tag.TAGNAME%></a> >
    <%=@event.short_subject%></div>
</div>

<div class="b_width960 clearfix">
  <div class="b_hd_cont f_l">
    <h3>热点活动 - <%=@event.short_subject%></h3>
    <div class="b_hd_conttit clearfix">
      <div class="b_hd_contimg f_l">
        <a href="<%=@event.url%>" target="_blank">
          <img alt="<%=@event.subject%>" border="0" src="<%=@event.image(150)%>" /></a>
        <span>组织者：<%=@event.organizer%></span>
      </div>
      <div class="b_hd_conttxt <%=  Time.now<@event.ends_at ? "b_hd_conttxt01" : "b_hd_conttxt02"%> f_r">
        <h4><%=@event.subject%></h4>
        <em>【活动主题】</em>
        <span>【活动时间】<%=@event.duration%></span>
        <span>【活动地点】<%=@event.location%></span>
        <span>【咨询联系】<%=@event.phone_numbers%></span>
      </div>
    </div>
    <div class="b_hd_continfo">
      <%=@event.content%>
      <div style="text-align: right; background-color: white; padding:5px;">
        <% unless @event.next_event_link.blank? %>
          下一个活动： <%= @event.next_event_link %>
        <% end %>
        <% if @event.id == 436 %>
          <form onsubmit="return submitForm(this);" enctype="multipart/form-data" method="post" action="http://bm.51hejia.com/index/form_process">
            <div class="b_hd_baoming">
              <p>		请填写以下个人信息，以便获取最多优惠信息。</p>
              <div>
                <label>姓名：</label>
                <input type="text" id="c1" name="c1" />*
              </div>
              <div>
                <label>电话：</label>
                <input type="text" id="c2" name="c2" /> *
              </div>
              <div>
                <label>邮箱：</label>
                <input type="text" name="c3" id="c3" /> *（和家网定期抽奖幸运网友）
              </div>
              <div class="b_hd_baoming_botton">
                <input type="hidden" name="formid" value="378" />
                <input type="submit" name="" value="提交" />
              </div>
            </div>
          </form>
          <script type="text/javascript">
            function ge(id) {
              return document.getElementById(id);
            }
            function trim(str) {
              return str.replace(/^\s*(.*?)[\s\n]*$/g, '$1');
            }
            function submitForm(form) {
              if (trim(ge("c1").value) == "") {
                alert("您必须填写【姓名】！")
                return false;
              }
              if (trim(ge("c2").value) == "") {
                alert("您必须填写【电话】！")
                return false;
              }
              if (!trim(ge("c2").value).match(/^\d{11}$/)) {
                alert("【电话】号码必须为11位数字！")
                return false;
              }
              if (trim(ge("c3").value) == "") {
                alert("您必须填写【邮箱】！")
                return false;
              }
              return true;
            }
          </script>
        <% end %>
      </div>
    </div>
  </div>
  <div class="b_hd_side margin10 f_r">
    <div class="b_hdside_box01 margin10">
      <h3>火热活动进行中</h3>
      <%=render :partial => "huodong/list/hot_event", :object => @hot_events[0]%>
    </div>
    <div class="b_hdside_box02 margin10">
      <%=render :partial => "huodong/list/hot_event", :object => @hot_events[1]%>
    </div>
