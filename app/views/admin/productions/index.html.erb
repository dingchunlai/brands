<div class="toolbar">
  <ul class="horizontal">
    <li class="last"><%= link_to '添加产品', new_admin_production_path %></li>
  </ul>
  <div class="clear"></div>
</div>
<%= show_flash_message %>
<div class="search">
  <% form_tag admin_productions_path, :method => :get do %>
    <div>
      产品名称：<%= text_field_tag :name, params[:name], :size => 8 %>　
      品牌名称：<%= text_field_tag :brand_name, params[:brand_name], :size => 8 %>　
      所属品类：<%= select_tag :tagid, options_for_select([["全部",0]].concat(Tag.all_categories.map{|r| [r.TAGNAME, r.TAGID.to_i]}), params[:tagid].to_i) %>　
      <%= submit_tag '搜索' %>
    </div>
  <% end %>
</div>
<%= paginate_content = will_paginate @productions %>
<table>
  <caption>产品列表　共搜索到 <b><%=@productions.total_entries%></b> 条产品记录</caption>
  <thead>
    <tr>
      <th>名称</th>
      <th>型号</th>
      <th>所属品牌</th>
      <!-- th>所属品类</th -->
      <th>产品类别</th>
      <th>所属系列</th>
      <th>首页推广</th>
      <th>品类首页推广</th>
      <th>品牌首页推广</th>
      <th>保存</th>
      <th>创建时间</th>
      <th>更新时间</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @productions.each do |production| %>
      <tr>
        <% form_for :production, :url => admin_production_path(production.id) + "/save_promotion_info", :html => {:method => :put, :multipart => true} do |f| %>
          <td><%= production.name %></td>
          <td><%= production.model %></td>
          <td><%= production.brand.name_zh %></td>
          <!-- td><%# production.brand_category.name %></td -->
          <td><%= production.category && production.category.name %></td>
          <td><%= production.series && production.series.name %></td>
          <td>
            位置<input type="text" size=1 name="shouye_index" value="<%if production.production_promotion_info && production.production_promotion_info.index_priority.to_i > 0%><%=production.production_promotion_info.index_priority %><%end%>" />
          </td>
          <td>            
            位置<input type="text" size=1 name="pinlei_index" value="<%if production.production_promotion_info && production.production_promotion_info.category_index_priority.to_i > 0%><%=production.production_promotion_info.category_index_priority %><%end%>" />
          </td>
          <td>
            位置<input type="text" size=1 name="pinpai_index" value="<%if production.production_promotion_info && production.production_promotion_info.brand_index_priority.to_i > 0%><%=production.production_promotion_info.brand_index_priority %><%end%>" />
          </td>
          <td><input type="submit" value="保存" /></td>
          <td><%= production.created_at.strftime("%Y-%m-%d") rescue "" %> </td>
          <td><%= production.updated_at.strftime("%Y-%m-%d") rescue "" %> </td>
          <td>
            <ul class="horizontal">
              <li>
                <%if production.is_valid.to_i == 1%>
                  <%= link_to '下架', admin_production_path(production) + "/set_is_valid", :onclick => "this.disabled = true;" %>
                <%else%>
                  <%= link_to '上架', admin_production_path(production) + "/set_is_valid", :style=>"color:red", :onclick => "this.disabled = true;" %>
                <%end%>
              </li>
              <li><%= link_to '编辑', edit_admin_production_path(production) %></li>
              <li><%= link_to '图片管理', admin_production_pictures_path(production) %></li>
              <li class="last"><%= link_to '删除', admin_production_path(production), :confirm => "确定删除#{production.name}吗？", :method => :delete %></li>
            </ul>
          </td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate_content %>
