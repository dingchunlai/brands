<div class="toolbar">
  <ul class="horizontal">
    <li class="last">
      <%= link_to '添加类别', new_admin_production_category_path %></li>
  </ul>
  <div class="clear"></div>
</div>
<% show_flash_message %>
<%= paginate_content = will_paginate @categories %>
<table>
  <caption>产品类别列表</caption>
  <thead>
    <tr>
      <th>名称</th>
      <th>所属行业</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><% unless category.tag.blank? %><%= category.tag.TAGNAME %><% else %><%= link_to "绑定行业", edit_admin_production_category_path(category) %><% end %></td>
        <td>
          <ul class="horizontal">
            <li><%= link_to '编辑', edit_admin_production_category_path(category) %></li>
            <li class="last"><%= link_to '删除', admin_production_category_path(category), :confirm => "确定删除“#{category.name}”吗？", :method => :delete %></li>
          </ul>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate_content %>
