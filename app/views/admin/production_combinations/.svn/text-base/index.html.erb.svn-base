<div class="toolbar">
  <ul class="horizontal">
    <li class="last"><%= link_to '添加组合案例', new_admin_production_combination_path %></li>
  </ul>
  <div class="clear"></div>
</div>
<%= show_flash_message %>
<div class="search">
  <% form_tag admin_production_combinations_path, :method => :get do %>
    <fieldset>
    <legend>查询条件</legend>
      标题：<%= text_field_tag :title %>
      品牌名：<%= text_field_tag :brand_name %>
      品类名：<%= text_field_tag :tag_name %>
      <%= submit_tag '搜索' %>
    </fieldset>
  <% end %>
</div>
<%= paginate_content = will_paginate @combinations %>
<div >
	<fieldset>
    <legend>组合案例列表</legend>
		<table width='90%'>
		  <thead>
		    <tr>
		      <th>标题</th>
		      <th>所属品牌</th>
		      <th>所属品类</th>
		      <th>是否有主图</th>
		      <th>操作</th>
		    </tr>
		  </thead>
		  <tbody>
		    <% @combinations.each do |combination| %>
		      <tr align='center'>
		        <td><%= combination.title %></td>
		        <td><%= combination.brand ? combination.brand.name_zh : '无关联品牌' %></td>
		        <td><%= combination.tag.TAGNAME %></td>
		        <td><%= combination.master_picture ? "<span style='color:red'>有</span>" :  '无' %></td>
		        <td>
		          <ul class="horizontal">
		            <li><%= link_to '编辑', edit_admin_production_combination_path(combination) %></li>
		            <li><%= link_to '图片管理', admin_production_combination_pictures_path(combination) %></li>
		            <li class="last"><%= link_to '删除', admin_production_combination_path(combination), :confirm => "确定删除#{combination.title}吗？", :method => :delete %></li>
		          </ul>
		        </td>
		      </tr>
		    <% end %>
		  </tbody>
		</table>
	</fieldset>
</div>
<%= paginate_content %>
