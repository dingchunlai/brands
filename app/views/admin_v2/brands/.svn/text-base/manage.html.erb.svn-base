<% content_for :navigation do  %>
  <span>当前位置：</span>
  <%= link_to "首页", admin_index_index_path %> <% unless @tag.blank? %> > <%= link_to @tag.TAGNAME, manage_admin_tag_path(@tag) %> <% end %>
  > <%= @brand.name_zh %>
<% end %>
<%= render :partial => "shared/brands/brand" %>

<div>
  <%
  i = 0
  unless @tag.blank?
    tag_id = @tag.TAGID
  %>
    <table>
      <tr>
        <td><%= i += 1 %>. 关联行业信息</td>
        <td>
          <%
          @brand.tags_for.each do |tag|
            class_css = (@tag && (tag.TAGID.to_i == @tag.TAGID)) ? 'current' : ''
          %>
            <%= link_to tag.TAGNAME, manage_admin_brand_path(@brand, :tag_id => tag.TAGID), :class => class_css %>
          <% end %>
        </td>
      </tr>
      <tr>
        <td><%= i += 1 %>. 关联品类信息</td>
        <td>
          <%
          @brand.brands_production_categories.each do |brand_categories|
            category = brand_categories.production_category
            if category.tag_id == tag_id
            %>
              <%= link_to category.name, second_category_admin_brand_path(@brand, :tag_id => tag_id) %>
            <%
            end
          end
        %>
        </td>
      </tr>
      <tr>
        <td><%= i += 1 %>. 品牌基本信息</td><td><%= link_to (@brand.tagged_brands.size > 0 ? "已设置" : "未设置"), edit_admin_brand_path(@brand, :tag_id => tag_id) %> </td>
      </tr>
      <tr>
        <td><%= i += 1 %>. 品牌详细信息</td>
        <td>
          <%
          nice = @brand.detail_for(tag_id)
          nice_text = if nice.blank?
            '未设置'
          else
            if nice.comment.blank? || nice.contact.blank? || nice.story.blank?
              '未设置完毕'
            else
              if @brand.logos.first(:conditions => ["tag_id = ?", tag_id]).blank?
                'lOGO信息未设置'
              else
                '未设置'
              end
            end
          end
        %>
          <%= link_to nice_text, detail_admin_brand_path(@brand, :tag_id => tag_id) %> </td>
      </tr>
      <tr>
        <td><%= i += 1 %>. 品牌参数信息</td><td><%= link_to (@brand.rating_for(tag_id).blank? ? '未设置' : '已设置'), rating_admin_brand_path(@brand, :tag_id => tag_id) %> </td>
      </tr>
      <tr>
        <td><%= i += 1 %>. 共有资料数量 </td><td><%= link_to @brand.documents.size, admin_brand_documents_path(@brand) %> </td>
      </tr>
      <tr>
        <td><%= i += 1 %>. 共有印象数量</td><td><%= link_to Impression.find(@tagged_brand.id).size, impressions_admin_brand_path(@brand, :tag_id => tag_id) %></td>
      </tr>
      <tr>
        <td><%= i += 1 %>. 共有点评数量</td><td> <%= link_to Comment.comments_count(@tagged_brand.id), admin_brand_comments_path(@brand, :tag_id => tag_id) %></td>
      </tr>
      <tr>
        <td><%= i += 1 %>. 品牌SEO信息</td> <td><%= link_to (HtmlMetadata.with_tag_brand(@tag.TAGURL, @brand.permalink).blank? ? '未设置' : '已设置'), html_meta_admin_brand_path(@brand, :tag_id => tag_id) %> </td>
      </tr>
      <tr>
        <td><%= i += 1 %>. 相关模板信息</td> <td> <%= link_to (@tagged_brand.blank? ? '未设置' : '已设置'), template_admin_brand_path(@brand, :tag_id => tag_id) %>  </td>
      </tr>
      <tr>
        <td><%= i += 1 %>. 品牌产品数量</td><td> <%= link_to Production.of_brand_tag(@brand, @tag).size, admin_brand_productions_path(@brand, :tag_id => tag_id) %>  </td>
      </tr>
      <tr>
        <td><%= i += 1 %>. 组合案例数量</td> <td><%= link_to ProductionCombination.with_tag(@tag).with_brand(@brand).size, admin_brand_production_combinations_path(@brand, :tag_id => tag_id) %></td>
      </tr>
      <tr>
        <td><%= i += 1 %>. 经销商  数量 </td><td><%= link_to Agency.with_tagged_brand(@tagged_brand.id).size, admin_brand_agencies_path(@brand, :tag_id => tag_id) %></td>
      </tr>
      <tr>
        <td><%= i += 1 %>. 品牌推广信息</td>
        <td>
          <table>　
            <%
            page = TaggedBrandPage.find_by_name('品牌首页')
            page.create_promotion_item(page.name, @tag, @brand)
            page.promotion_page_parts.each do |part|
              collection = PromotionCollection.find_by_code(TaggedBrandPage.item_code(page.name, @tag.TAGURL, @brand.permalink, part.name))
              collection_item_url = admin_promotion_items_path(page.item_code(page.name, @tag.TAGURL, @brand.permalink, part.name))
            %>
              <tr><td>
                  <%= link_to part.name, goto_admin_redirection_addresses_path(:url => collection_item_url) %>
                  : <%= collection && collection.items.size || 0 %> / <%= collection.size || '---' %>
                </td></tr>
            <% end %>
          </table>
        </td>
      </tr>
    </table>
  <% else%>
    <%= link_to "关联行业", edit_admin_brand_path(@brand) %>
  <% end %>
</div>
