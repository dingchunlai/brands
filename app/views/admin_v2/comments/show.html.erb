<% content_for :navigation do  %>
  <span>当前位置：</span>
  <%= link_to "首页", admin_index_index_path %> <% unless @tag.blank? %> > <%= link_to @tag.TAGNAME, manage_admin_tag_path(@tag) %> <% end %>
  <% unless @brand.blank? %> > <%= link_to @brand.name_zh, manage_admin_brand_path(@brand) %><% end %> > <%= link_to "评论列表页", admin_brand_comments_path(@brand, :tag_id => @tag.TAGID) %> >  查看评论页面 
<% end %>
<%= render :partial => "shared/brands/brand" %>

<fieldset>
  <%= link_to "返回列表页", admin_brand_comments_path(@brand, :tag_id => @tag.TAGID) %>
  <%= link_to "新建评论", new_admin_brand_comment_path(@brand, :tag_id => @tag.TAGID) %>
  <ul>
    <li>标题: <%= @comment.title %></li>
    <li>类型: <%= @comment.remark_zh %></li>
    <li>评论时间: <%= @comment.created_at && @comment.created_at.strftime("%Y年%m月%d日") || '' %></li>
    <li>用户: <%= @comment.user_name %></li>
    <li>IP: <%= @comment.ip %></li>
    <li>鲜花数: <%= @comment.support %></li>
    <li>鸡蛋数: <%= @comment.oppose %></li>
    <li>回复数: <%= @comment.comments_count %></li>
    <li>标签: <%= @comment.tags.join(' ') %></li>
    <li>内容: <%= @comment.body %></li>
  </ul>
</fieldset>
