<% content_for :navigation do  %>
  <span>当前位置：</span>
  <%= link_to "首页", admin_index_index_path %> <% unless @tag.blank? %> > <%= link_to @tag.TAGNAME, manage_admin_tag_path(@tag) %> <% end %>
  <% unless @brand.blank? %> > <%= link_to @brand.name_zh, manage_admin_brand_path(@brand) %><% end %> > 经销商管理页面
<% end %>
<%= render :partial => "shared/brands/brand" %>

<%= show_flash_message %>
<p><%= link_to "新建经销商", new_admin_brand_agency_path(@brand, :tag_id => @tag.TAGID) %></p>

<div>
  <table>
    <tr>
      <th>编号</th>
      <th>经销商</th>
      <th>电话</th>
      <th>联系地址</th>
      <th>所属城市</th>
      <th>操作</th>
    </tr>
    <% @agencies.each do |agency| -%>
      <tr>
        <td><%= agency.id %></td>
        <td><%= agency.title %></td>
        <td><%= agency.telephone %></td>
        <td><%= agency.address %></td>
        <td><%= agency.city_obj && agency.city_obj.name || '---' %></td>
        <td><%= link_to "编辑", edit_admin_brand_agency_path(@brand, agency, :tag_id => @tag.TAGID)  %> | <%= link_to "删除", admin_brand_agency_path(@brand, agency, :tag_id => @tag.TAGID), :method => :delete, :confirm => "您确认删除[#{@brand.name_zh} #{@tag.TAGNAME}] #{agency.title}吗？"  %></td>
      </tr>
    <% end -%>
  </table>
</div>
