<% content_for :navigation do  %>
  <span>当前位置：</span>
  <%= link_to "首页", admin_index_index_path %> 
  <% unless @tag.blank? %> > <%= link_to @tag.TAGNAME, manage_admin_tag_path(@tag) %> <% end %>
  <% unless @brand.blank? %> > <%= link_to @brand.name_zh, manage_admin_brand_path(@brand) %> <% end%> > 资料管理页面
<% end %>
<%= render :partial => "shared/brands/brand" %>

<div class="toolbar">
  <ul class="horizontal">
    <li class="last"><%= link_to '添加资料', new_admin_brand_document_path(@brand) %></li>
  </ul>
  <caption><%= @brand.name_zh %> 资料列表</caption>
</div>
<div>
  <%= paginate_content = will_paginate @documents %>
  <table>
    <thead>
      <tr>
        <th>名称</th>
        <th>类别</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% @documents.each do |document| %>
        <tr>
          <td><%= document.name %></td>
          <td><%= document.url.blank? ? "文件(#{document.filename})" : "链接(document.url)" %></td>
          <td>
            <ul class="horizontal">
              <li class="last"><%= link_to '删除', admin_document_path(document), :confirm => "确定删除“#{document.name}”吗？", :method => :delete %></li>
            </ul>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate_content %>
</div>
