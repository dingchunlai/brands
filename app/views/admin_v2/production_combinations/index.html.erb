<% content_for :navigation do  %>
  <span>当前位置：</span>
  <%= link_to "首页", admin_index_index_path %> <% unless @tag.blank? %> > <%= link_to @tag.TAGNAME, manage_admin_tag_path(@tag) %> <% end %>
  <% unless @brand.blank? %> > <%= link_to @brand.name_zh, manage_admin_brand_path(@brand) %> <% end %> > 组合案例管理页面
<% end %>
<%= render :partial => "shared/brands/brand" %>

<%= show_flash_message %>
<div>
  <%= link_to '添加组合案例', new_admin_brand_production_combination_path(@brand, :tag_id => @tag.TAGID) %>
</div>
<div>
  <%= paginate_content = will_paginate @combinations %>
  <table width='90%'>
    <thead>
      <tr>
        <th>标题</th>
        <th>所属品牌</th>
        <th>所属品类</th>
        <th>是否有主图</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% @combinations.each do |combination| %>
        <tr align='center'>
          <td><%= combination.title %></td>
          <td><%= combination.brand ? combination.brand.name_zh : '无关联品牌' %></td>
          <td><%= combination.tag.TAGNAME %></td>
          <td><%= combination.master_picture ? "<span style='color:red'>有</span>" :  '无' %></td>
          <td>
            <ul class="horizontal">
              <li><%= link_to '编辑', edit_admin_brand_production_combination_path(@brand, combination.id, :tag_id => @tag.TAGID) %></li>
              <li><%= link_to '图片管理', admin_production_combination_pictures_path(combination) %></li>
              <li class="last"><%= link_to '删除', admin_brand_production_combination_path(@brand, combination.id, :tag_id => @tag.TAGID), :confirm => "确定删除#{combination.title}吗？", :method => :delete %></li>
            </ul>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate_content %>
</div>
