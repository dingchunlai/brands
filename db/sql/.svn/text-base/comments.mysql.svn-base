SET NAMES utf8; 

USE product;

CREATE TABLE comments(
    id INTEGER AUTO_INCREMENT PRIMARY KEY,
    tagged_brand_id INTEGER,
    title VARCHAR(255),
    body VARCHAR(255),
    remark tinyint(4) NOT NULL,
    ip CHAR(15),
    created_at DATETIME,
    user_id INTEGER,
    user_name VARCHAR(64)
) ENGINE InnoDB CHARACTER SET utf8;

CREATE INDEX comments_tagged_brand_id ON comments(tagged_brand_id);
CREATE INDEX comments_user_id ON comments(user_id);
